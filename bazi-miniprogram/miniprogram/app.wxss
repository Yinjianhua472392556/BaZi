/**app.wxss**/
/* 全局样式 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 传统中式配色方案 */
page {
  background-color: #FFF8DC; /* 米白色背景 */
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

/* 主要按钮样式 */
.btn-primary {
  background: linear-gradient(135deg, #C8860D 0%, #DAA520 100%);
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(200, 134, 13, 0.3);
  margin: 20rpx 0;
}

.btn-primary:active {
  background: linear-gradient(135deg, #B8760C 0%, #CA9510 100%);
  transform: translateY(2rpx);
}

/* 次要按钮样式 */
.btn-secondary {
  background: white;
  color: #C8860D;
  border: 2rpx solid #C8860D;
  border-radius: 50rpx;
  padding: 18rpx 38rpx;
  font-size: 28rpx;
  margin: 20rpx 0;
}

/* 卡片容器 */
.card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 20rpx;
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #F0E68C;
}

/* 标题样式 */
.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #8B4513;
  text-align: center;
  margin: 30rpx 0;
}

.subtitle {
  font-size: 36rpx;
  font-weight: 600;
  color: #C8860D;
  margin: 20rpx 0;
}

/* 输入框样式 */
.input-group {
  margin: 30rpx 0;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #8B4513;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #DDD;
  border-radius: 10rpx;
  font-size: 30rpx;
  background: white;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #C8860D;
  outline: none;
}

/* 日期时间选择器样式 */
.picker {
  background: white;
  border: 2rpx solid #E0E0E0;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 30rpx;
  color: #333;
  text-align: center;
}

.picker:active {
  border-color: #C8860D;
}

/* 结果展示样式 */
.result-container {
  background: linear-gradient(135deg, #FFF8DC 0%, #F5DEB3 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin: 20rpx;
}

.bazi-item {
  display: inline-block;
  background: #C8860D;
  color: white;
  padding: 15rpx 25rpx;
  margin: 10rpx 5rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
  font-weight: bold;
  text-align: center;
  min-width: 120rpx;
}

.wuxing-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #E0E0E0;
}

.wuxing-name {
  font-size: 30rpx;
  color: #8B4513;
  font-weight: 500;
}

.wuxing-count {
  font-size: 32rpx;
  color: #C8860D;
  font-weight: bold;
}

/* 历史记录样式 */
.history-item {
  background: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin: 15rpx 0;
  border-left: 8rpx solid #C8860D;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.history-date {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.history-bazi {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 加载样式 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

/* 空状态样式 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #999;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
}

/* 通用工具类 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

.mt-10 { margin-top: 20rpx; }
.mt-20 { margin-top: 40rpx; }
.mb-10 { margin-bottom: 20rpx; }
.mb-20 { margin-bottom: 40rpx; }

.flex { display: flex; }
.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}
.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

/* 免责声明样式 */
.disclaimer {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding: 20rpx;
  line-height: 1.5;
  background: #F9F9F9;
  border-radius: 10rpx;
  margin: 20rpx 0;
}

/* 优化后的页面头部区域 - 响应式设计 */
.page-header {
  background: linear-gradient(180deg, #E8F5E8 0%, #F0F8FF 100%);
  padding: 20rpx 30rpx 30rpx;
  padding-top: calc(20rpx + env(safe-area-inset-top));
  border-radius: 0 0 30rpx 30rpx;
  position: relative;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.page-title-container {
  text-align: center;
  position: relative;
  z-index: 10;
}

.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 10rpx;
}

.page-subtitle {
  font-size: 28rpx;
  color: #8B4513;
  opacity: 0.8;
}

/* 主内容区域优化 */
.main-content {
  padding: 30rpx 20rpx;
  background: white;
  margin: 0 20rpx;
  margin-top: -15rpx;
  border-radius: 20rpx 20rpx 0 0;
  box-shadow: 0 -4rpx 15rpx rgba(0, 0, 0, 0.05);
  position: relative;
  z-index: 10;
  min-height: calc(100vh - 200rpx);
  animation: slideInUp 0.4s ease-out;
}

/* 响应式适配 */
@media (max-height: 667px) {
  .page-header {
    padding: 15rpx 30rpx 20rpx;
    padding-top: calc(15rpx + env(safe-area-inset-top));
  }
  
  .page-title {
    font-size: 40rpx;
  }
  
  .page-subtitle {
    font-size: 24rpx;
  }
  
  .main-content {
    padding: 25rpx 20rpx;
    margin-top: -10rpx;
  }
}

@media (min-height: 812px) {
  .page-header {
    padding: 30rpx 30rpx 40rpx;
    padding-top: calc(30rpx + env(safe-area-inset-top));
  }
  
  .page-title {
    font-size: 52rpx;
  }
  
  .main-content {
    padding: 40rpx 30rpx;
    margin-top: -20rpx;
  }
}

/* iPhone X 系列等刘海屏适配 */
@supports (padding: max(0px)) {
  .page-header {
    padding-top: max(20rpx, env(safe-area-inset-top));
  }
}

/* 页面加载动画 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 简化的装饰元素（可选） */
.page-decoration {
  position: absolute;
  top: 50%;
  right: 30rpx;
  transform: translateY(-50%);
  font-size: 24rpx;
  opacity: 0.3;
  color: #8B4513;
}

/* 确保内容区域在小屏幕下不被遮挡 */
.content-safe-area {
  padding-bottom: env(safe-area-inset-bottom);
}
