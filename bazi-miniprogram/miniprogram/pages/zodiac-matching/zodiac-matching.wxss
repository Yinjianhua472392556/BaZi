/**zodiac-matching.wxss**/

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F5E8 0%, #F0F8FF 50%, #FFF8DC 100%);
  position: relative;
}

/* 简化的页面头部 */
.page-header {
  padding: 20rpx 30rpx 20rpx;
  position: relative;
  z-index: 10;
}

.page-title-container {
  text-align: center;
  margin-bottom: 10rpx;
}

.page-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
}

.page-subtitle {
  font-size: 26rpx;
  color: #666;
  opacity: 0.9;
}

.page-decoration {
  text-align: center;
  font-size: 32rpx;
  color: #C8860D;
  opacity: 0.8;
}

/* 主要内容区域 */
.main-content {
  padding: 40rpx 30rpx;
  background: white;
  margin: -30rpx 20rpx 0;
  border-radius: 30rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
  animation: slideInUp 0.6s ease-out;
}

/* 自定义导航栏 - 简化版 */
.custom-navbar {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx 40rpx;
  position: relative;
  z-index: 10;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #E0E0E0;
}

.nav-back-icon {
  font-size: 36rpx;
  color: #8B4513;
  font-weight: bold;
}

.nav-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2F4F4F;
  text-align: center;
  flex: 1;
}

.nav-placeholder {
  width: 60rpx;
}

/* 配对选择区域 */
.matching-section {
  margin-bottom: 40rpx;
}

.zodiac-row {
  background: #F8F9FA;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #E9ECEF;
}

.zodiac-label {
  font-size: 32rpx;
  color: #2F4F4F;
  font-weight: 600;
  min-width: 80rpx;
}

.zodiac-picker {
  flex: 1;
}

.picker-display {
  background: white;
  border: 2rpx solid #E0E0E0;
  border-radius: 15rpx;
  padding: 25rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  transition: all 0.3s ease;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.picker-display:active {
  border-color: #C8860D;
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(200, 134, 13, 0.2);
}

.zodiac-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.picker-arrow {
  font-size: 24rpx;
  color: #C8860D;
  margin-left: 20rpx;
}

/* 配对按钮 */
.match-button {
  background: linear-gradient(135deg, #C8860D 0%, #DAA520 100%) !important;
  color: white !important;
  font-size: 36rpx;
  font-weight: bold;
  padding: 30rpx 80rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(200, 134, 13, 0.3);
  margin: 40rpx auto 0;
  display: block;
  width: 240rpx;
  transition: all 0.3s ease;
}

.match-button::after {
  border: none;
}

.match-button:active {
  background: linear-gradient(135deg, #B8760C 0%, #CA9510 100%) !important;
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(200, 134, 13, 0.5);
}

/* 结果展示区域 */
.result-section {
  margin-top: 40rpx;
}

.result-header {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #F0F0F0;
}

.result-icon {
  width: 8rpx;
  height: 40rpx;
  background: #C8860D;
  border-radius: 4rpx;
  margin-right: 20rpx;
}

.result-title {
  font-size: 36rpx;
  color: #2F4F4F;
  font-weight: bold;
}

.result-content {
  background: #F8F9FA;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #E9ECEF;
}

/* 配对评分 */
.score-container {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  gap: 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #FFF8DC 0%, #F5DEB3 100%);
  border-radius: 20rpx;
  border: 2rpx solid #DAA520;
}

.score-circle {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #C8860D 0%, #DAA520 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  box-shadow: 0 8rpx 20rpx rgba(200, 134, 13, 0.3);
}

.score-number {
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1;
}

.score-unit {
  font-size: 24rpx;
  opacity: 0.9;
}

.score-info {
  text-align: center;
}

.score-level {
  font-size: 32rpx;
  font-weight: bold;
  color: #C8860D;
  display: block;
  margin-bottom: 10rpx;
}

.score-emoji {
  font-size: 48rpx;
  display: block;
}

/* 分析内容区域 */
.analysis-section,
.advantages-section,
.challenges-section,
.suggestions-section {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #F0F0F0;
}

.analysis-title,
.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 15rpx;
  display: block;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.analysis-content,
.section-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  display: block;
}

/* 空状态 */
.empty-result {
  background: white;
  border: 2rpx dashed #E0E0E0;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #8B4513;
}

/* 免责声明 */
.disclaimer {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding: 20rpx;
  line-height: 1.5;
  background: #F9F9F9;
  border-radius: 10rpx;
  margin: 20rpx 0;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .main-content {
    margin: -30rpx 15rpx 0;
    padding: 30rpx 20rpx;
  }
  
  .zodiac-row {
    padding: 25rpx;
    gap: 20rpx;
  }
  
  .zodiac-label {
    min-width: 70rpx;
    font-size: 28rpx;
  }
  
  .picker-display {
    padding: 20rpx 25rpx;
  }
  
  .zodiac-text {
    font-size: 28rpx;
  }
  
  .match-button {
    font-size: 32rpx;
    padding: 25rpx 60rpx;
    width: 200rpx;
  }
  
  .result-content {
    padding: 30rpx;
  }
  
  .score-container {
    flex-direction: column;
    gap: 30rpx;
    padding: 25rpx;
  }
  
  .score-circle {
    width: 120rpx;
    height: 120rpx;
  }
  
  .score-number {
    font-size: 40rpx;
  }
}

/* 页面加载动画 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 按钮点击反馈 */
.nav-back:active {
  background: #F0F0F0;
  transform: scale(0.95);
}

/* 结果内容渐入动画 */
.result-content {
  animation: fadeIn 0.5s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* 卡片悬浮效果 */
.zodiac-row:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 多维度评分样式 */
.scores-section {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #F0F0F0;
}

.score-items {
  margin-top: 20rpx;
}

.score-item {
  display: flex;
  align-items: center;
  margin-bottom: 25rpx;
  gap: 20rpx;
}

.score-label {
  font-size: 26rpx;
  color: #333;
  min-width: 180rpx;
  font-weight: 500;
}

.score-bar {
  flex: 1;
  height: 16rpx;
  background: #F0F0F0;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
}

.score-progress {
  height: 100%;
  background: linear-gradient(90deg, #FFB6C1 0%, #FFA07A 50%, #FF6347 100%);
  border-radius: 8rpx;
  transition: width 0.8s ease-in-out;
  position: relative;
}

.score-progress::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255,255,255,0.3) 50%, transparent 100%);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

.score-value {
  font-size: 26rpx;
  color: #C8860D;
  font-weight: bold;
  min-width: 80rpx;
  text-align: right;
}

/* 历史名人案例样式 */
.couples-section {
  background: white;
  border-radius: 15rpx;
  padding: 25rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  border: 1rpx solid #F0F0F0;
}

.couples-list {
  margin-top: 20rpx;
}

.couple-card {
  background: linear-gradient(135deg, #FFF8DC 0%, #F5DEB3 100%);
  border-radius: 12rpx;
  padding: 25rpx;
  margin-bottom: 15rpx;
  border: 1rpx solid #DAA520;
  box-shadow: 0 2rpx 8rpx rgba(200, 134, 13, 0.1);
  transition: all 0.3s ease;
}

.couple-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(200, 134, 13, 0.2);
}

.couple-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #C8860D;
  margin-bottom: 8rpx;
}

.couple-story {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 8rpx;
}

.couple-traits {
  font-size: 24rpx;
  color: #8B4513;
  font-style: italic;
}
