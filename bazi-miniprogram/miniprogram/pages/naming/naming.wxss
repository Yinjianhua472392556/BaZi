/* pages/naming/naming.wxss */

/* 使用全局统一的页面结构样式 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F5E8 0%, #F0F8FF 50%, #FFF8DC 100%);
  position: relative;
}

/* 统一的页面头部样式 */
.page-header {
  padding: 20rpx 30rpx 20rpx;
  position: relative;
  z-index: 10;
}

.page-title-container {
  text-align: center;
  margin-bottom: 10rpx;
}

.page-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
}

.page-subtitle {
  font-size: 26rpx;
  color: #666;
  opacity: 0.9;
}

.page-decoration {
  text-align: center;
  font-size: 32rpx;
  color: #C8860D;
  opacity: 0.8;
}

/* 统一的主内容区域样式 */
.main-content {
  padding: 40rpx 30rpx;
  background: white;
  margin: -30rpx 20rpx 0;
  border-radius: 30rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
  animation: slideInUp 0.6s ease-out;
}

/* 表单卡片样式 - 统一化 */
.form-card {
  background: transparent;
  border-radius: 0;
  padding: 0;
  box-shadow: none;
  margin-bottom: 0;
}

.form-group {
  margin-bottom: 40rpx;
}

.form-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #2F4F4F;
  margin-bottom: 20rpx;
  position: relative;
}

.form-title::after {
  content: '';
  position: absolute;
  bottom: -5rpx;
  left: 0;
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #C8860D 0%, #DAA520 100%);
  border-radius: 2rpx;
}

/* 输入行样式 - 统一化 */
.input-row {
  margin-bottom: 30rpx;
}

.input-label {
  display: block;
  font-size: 28rpx;
  color: #2F4F4F;
  margin-bottom: 10rpx;
  font-weight: 500;
}

/* 统一的输入框样式 */
.input-field {
  width: 100%;
  padding: 25rpx;
  border: 2rpx solid #DDD;
  border-radius: 10rpx;
  font-size: 30rpx;
  background: white;
  box-sizing: border-box;
}

.input-field:focus {
  border-color: #C8860D;
  box-shadow: 0 0 0 4rpx rgba(200, 134, 13, 0.1);
  outline: none;
}

/* 统一的选择器样式 */
.picker-display {
  background: white;
  border: 2rpx solid #E0E0E0;
  border-radius: 10rpx;
  padding: 25rpx;
  font-size: 30rpx;
  color: #333;
  position: relative;
  transition: all 0.3s ease;
}

.picker-display:active {
  border-color: #C8860D;
  background: #FFF8DC;
}

.picker-arrow {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 24rpx;
}

/* 日期输入样式优化 */
.date-inputs {
  display: flex;
  gap: 15rpx;
  margin-bottom: 30rpx;
}

.date-input-group {
  flex: 1;
  display: flex;
  align-items: center;
}

.date-input {
  flex: 1;
  padding: 20rpx 15rpx;
  border: 2rpx solid #E0E0E0;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
  background: white;
  transition: all 0.3s ease;
}

.date-input:focus {
  border-color: #C8860D;
  box-shadow: 0 0 0 4rpx rgba(200, 134, 13, 0.1);
}

.date-label {
  margin-left: 8rpx;
  font-size: 26rpx;
  color: #666;
  font-weight: 500;
}

/* 统一的按钮样式 */
.action-section {
  text-align: center;
  margin-top: 40rpx;
}

.start-naming-btn {
  background: linear-gradient(135deg, #C8860D 0%, #DAA520 100%) !important;
  color: white !important;
  font-size: 36rpx;
  font-weight: bold;
  padding: 25rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(200, 134, 13, 0.3);
  width: 100%;
  position: relative;
  overflow: hidden;
}

.start-naming-btn::after {
  border: none;
}

.start-naming-btn:active {
  background: linear-gradient(135deg, #B8760C 0%, #CA9510 100%) !important;
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(200, 134, 13, 0.5);
}

.start-naming-btn.loading {
  background: #DDD !important;
  color: #999 !important;
  box-shadow: none !important;
}

.start-naming-btn[disabled] {
  background: #DDD !important;
  color: #999 !important;
  box-shadow: none !important;
}

.start-naming-btn[disabled]:active {
  transform: none !important;
}

/* 结果区域样式 - 统一化 */
.results-section {
  padding: 40rpx 30rpx;
  background: white;
  margin: -30rpx 20rpx 0;
  border-radius: 30rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
  animation: slideInUp 0.6s ease-out;
}

/* 分析卡片样式 */
.analysis-card {
  background: linear-gradient(135deg, #FFF8DC 0%, #F5DEB3 100%);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  border: 1rpx solid #F0E68C;
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.1);
}

.analysis-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 20rpx;
  text-align: center;
}

.analysis-content {
  font-size: 28rpx;
  color: #8B4513;
  line-height: 1.6;
  margin-bottom: 20rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 12rpx;
}

.naming-suggestions {
  font-size: 26rpx;
  color: #C8860D;
  line-height: 1.5;
  padding: 15rpx 20rpx;
  background: #FFF8E7;
  border-radius: 12rpx;
  border-left: 4rpx solid #C8860D;
}

/* 名字列表样式 */
.names-list {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 30rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #F0F0F0;
}

.list-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 30rpx;
  text-align: center;
}

.name-item {
  border: 2rpx solid #F0F0F0;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: #FAFAFA;
  transition: all 0.3s ease;
  animation: fadeInUp 0.3s ease forwards;
}

.name-item:active {
  transform: scale(0.98);
  background: #F0F8FF;
  border-color: #C8860D;
}

.name-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.name-text {
  font-size: 36rpx;
  font-weight: bold;
  color: #2F4F4F;
}

.name-score {
  display: flex;
  align-items: baseline;
}

.score-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #C8860D;
}

.score-label {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.name-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.name-pronunciation {
  font-size: 26rpx;
  color: #666;
}

.name-luck {
  font-size: 26rpx;
  color: #28A745;
  font-weight: bold;
}

.name-meaning {
  font-size: 24rpx;
  color: #888;
  line-height: 1.4;
  margin-bottom: 20rpx;
}

/* 统一的操作按钮样式 */
.name-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  border: none;
  font-weight: 500;
}

.collect-btn {
  background: white !important;
  color: #C8860D !important;
  border: 2rpx solid #C8860D;
}

.collect-btn::after {
  border: none;
}

.share-btn {
  background: #C8860D !important;
  color: white !important;
}

.share-btn::after {
  border: none;
}

/* 重新起名按钮 */
.restart-section {
  text-align: center;
  margin-top: 30rpx;
}

.restart-btn {
  background: white !important;
  color: #C8860D !important;
  font-size: 28rpx;
  font-weight: 600;
  padding: 20rpx 60rpx;
  border: 3rpx solid #C8860D;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 15rpx rgba(200, 134, 13, 0.2);
}

.restart-btn::after {
  border: none;
}

.restart-btn:active {
  background: #FFF8DC !important;
  transform: scale(0.98);
}

/* 详情弹窗样式优化 */
.name-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #F0F0F0;
  background: linear-gradient(135deg, #C8860D 0%, #DAA520 100%);
  color: white;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.modal-close {
  font-size: 36rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.modal-close:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.detail-section {
  margin-bottom: 30rpx;
}

.detail-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #F0F0F0;
  position: relative;
}

.detail-title::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 30rpx;
  height: 2rpx;
  background: #C8860D;
}

.detail-row {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 26rpx;
}

.detail-label {
  color: #666;
  margin-right: 20rpx;
  min-width: 120rpx;
}

.detail-value {
  color: #333;
  flex: 1;
}

.detail-value.score {
  color: #C8860D;
  font-weight: bold;
}

.detail-value.luck {
  color: #28A745;
  font-weight: bold;
}

/* 五行字符分析样式 */
.wuxing-chars {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.wuxing-char {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  min-width: 80rpx;
  border: 2rpx solid #E0E0E0;
}

.char-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 8rpx;
}

.char-wuxing {
  font-size: 22rpx;
  color: #C8860D;
  background: #FFF8E7;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 五格分析样式 */
.wuge-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.wuge-item {
  background: #F8F9FA;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  border: 2rpx solid #E0E0E0;
}

.wuge-name {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.wuge-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 5rpx;
}

.wuge-wuxing {
  font-size: 22rpx;
  color: #C8860D;
  margin-bottom: 5rpx;
}

.wuge-luck {
  font-size: 20rpx;
  color: #28A745;
  font-weight: 500;
}

/* 寓意文本样式 */
.meaning-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  border-left: 4rpx solid #C8860D;
}

/* 免责声明样式 */
.disclaimer {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding: 20rpx;
  line-height: 1.5;
  background: #F9F9F9;
  border-radius: 10rpx;
  margin: 20rpx 0;
}

/* 动画效果 */
@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .main-content, .results-section {
    margin: -30rpx 15rpx 0;
    padding: 30rpx 20rpx;
  }
  
  .page-title {
    font-size: 38rpx;
  }
  
  .form-card {
    padding: 0;
  }
  
  .date-inputs {
    gap: 10rpx;
  }
  
  .date-input {
    padding: 15rpx 10rpx;
    font-size: 24rpx;
  }
  
  .wuge-grid {
    grid-template-columns: 1fr;
  }
  
  .name-detail-modal {
    padding: 30rpx 20rpx;
  }
}

/* 增强交互效果 */
.input-field:focus,
.date-input:focus {
  transform: scale(1.02);
  transition: all 0.3s ease;
}

.picker-display:hover {
  border-color: #C8860D;
}

/* 加载状态优化 */
.start-naming-btn.loading::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 40rpx;
  height: 40rpx;
  margin: -20rpx 0 0 -20rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 提升视觉层次 */
.form-group:nth-child(even) {
  background: rgba(248, 249, 250, 0.5);
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx -10rpx;
}

/* 优化触摸反馈 */
.name-item:hover {
  box-shadow: 0 6rpx 25rpx rgba(200, 134, 13, 0.15);
}

.action-btn:active {
  transform: scale(0.95);
}
