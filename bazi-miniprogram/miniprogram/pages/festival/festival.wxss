/**festival.wxss - 优化版节日页面样式**/

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F5E8 0%, #F0F8FF 50%, #FFF8DC 100%);
  position: relative;
}

/* 简化的页面头部 */
.page-header {
  padding: 20rpx 30rpx 20rpx;
  position: relative;
  z-index: 10;
}

.page-title-container {
  text-align: center;
  margin-bottom: 10rpx;
}

.page-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
  animation: titleShine 4s ease-in-out infinite;
}

.page-subtitle {
  font-size: 26rpx;
  color: #666;
  opacity: 0.9;
}

.page-decoration {
  text-align: center;
  font-size: 32rpx;
  color: #C8860D;
  opacity: 0.8;
}

/* 主要内容区域 */
.main-content {
  padding: 40rpx 30rpx;
  background: white;
  margin: -30rpx 20rpx 0;
  border-radius: 30rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
  animation: slideInUp 0.6s ease-out;
}

/* 更新时间 */
.update-time {
  font-size: 24rpx;
  color: #8B4513;
  opacity: 0.8;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #E0E0E0;
  border-top: 6rpx solid #C8860D;
  border-radius: 50%;
  animation: spin 1s linear infinite, spinGlow 2s ease-in-out infinite alternate;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态和空状态 */
.error-container,
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.error-icon,
.empty-icon {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.error-text,
.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
  text-align: center;
}

.retry-button {
  background: linear-gradient(45deg, #C8860D 0%, #DAA520 100%) !important;
  color: white !important;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  border-radius: 30rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(200, 134, 13, 0.3);
  transition: all 0.3s ease;
}

.retry-button::after {
  border: none;
}

.retry-button:active {
  transform: scale(0.95);
}

/* 节日列表 */
.festival-list {
  padding: 20rpx 0;
}

/* 节日卡片 - 全新设计 */
.festival-card {
  background: white;
  border-radius: 24rpx;
  margin-bottom: 40rpx;
  padding: 0;
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.08),
    0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #F0F0F0;
  transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
  position: relative;
  overflow: hidden;
  animation: fadeInUp 0.6s ease-out;
}

.festival-card:hover {
  transform: translateY(-8rpx);
  box-shadow: 
    0 16rpx 48rpx rgba(0, 0, 0, 0.12),
    0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.festival-card:active {
  transform: translateY(-4rpx) scale(0.99);
}

/* 受欢迎程度样式 */
.festival-card.popular {
  border: 2rpx solid var(--primary-color);
  box-shadow: 
    0 8rpx 32rpx rgba(0, 0, 0, 0.08),
    0 0 0 1rpx var(--primary-color);
}

/* 卡片顶部装饰条 */
.card-top-decoration {
  height: 6rpx;
  width: 100%;
  opacity: 0.8;
}

/* 头部区域 */
.festival-header {
  padding: 30rpx 30rpx 20rpx;
}

.header-main {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.festival-title-section {
  display: flex;
  align-items: center;
  flex: 1;
  gap: 12rpx;
}

.festival-emoji {
  font-size: 48rpx;
  line-height: 1;
}

.festival-name {
  font-size: 36rpx;
  font-weight: bold;
  color: var(--primary-color);
  margin-right: 12rpx;
  text-shadow: 0 1rpx 3rpx rgba(255, 255, 255, 0.8);
  filter: contrast(1.2);
}

.festival-type-tag {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  color: white;
  background: var(--accent-color);
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.6);
  border: 1rpx solid rgba(0, 0, 0, 0.15);
  filter: saturate(1.2) contrast(1.1);
}


/* 核心信息区 */
.core-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.date-section {
  flex: 1;
}

.date-main {
  margin-bottom: 8rpx;
}

.solar-date {
  font-size: 32rpx;
  font-weight: bold;
  color: #2F4F4F;
  display: block;
  margin-bottom: 4rpx;
}

.day-of-week {
  font-size: 24rpx;
  color: #555;
  font-weight: 500;
}

.lunar-date-display {
  margin-top: 8rpx;
}

.lunar-text {
  font-size: 26rpx;
  color: #654321;
  background: linear-gradient(135deg, #FFF8DC 0%, #F0F8FF 100%);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  border: 1rpx solid #E0E0E0;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

/* 倒计时区域 */
.countdown-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.countdown-circle {
  width: 120rpx;
  height: 120rpx;
  border: 5rpx solid var(--primary-color);
  border-radius: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(248, 248, 248, 0.95) 100%);
  animation: countdownPulse 2.5s ease-in-out infinite, countdownGlow 4s ease-in-out infinite alternate;
  box-shadow: 
    0 4rpx 16rpx rgba(0, 0, 0, 0.1),
    inset 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
}

.countdown-number {
  font-size: 38rpx;
  font-weight: 900;
  color: var(--primary-color);
  line-height: 1;
  animation: numberBounce 3s ease-in-out infinite;
}

.countdown-unit {
  font-size: 20rpx;
  color: var(--primary-color);
  opacity: 0.8;
  font-weight: 600;
}

.countdown-text {
  font-size: 22rpx;
  color: #666;
  text-align: center;
}

/* 文化信息区 */
.cultural-info {
  padding: 0 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.description-section {
  margin-bottom: 16rpx;
}

.festival-description {
  font-size: 28rpx;
  color: #2F4F4F;
  line-height: 1.6;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, #F8F9FA 0%, #E9ECEF 100%);
  border-radius: 16rpx;
  border-left: 4rpx solid var(--primary-color);
}

.customs-section {
  margin-top: 16rpx;
}

.customs-label {
  font-size: 24rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: block;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

.customs-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.custom-tag {
  font-size: 22rpx;
  color: white;
  background: var(--accent-color);
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.5);
  border: 1rpx solid rgba(0, 0, 0, 0.1);
  min-contrast: 4.5;
}

/* 传统信息区 */
.traditional-info {
  padding: 0 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.traditional-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
  padding: 8rpx 0;
}

.traditional-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2F4F4F;
}

.traditional-toggle {
  font-size: 20rpx;
  opacity: 0.6;
}

.traditional-content {
  background: linear-gradient(135deg, #F0FFFF 0%, #E0F6FF 100%);
  border-radius: 16rpx;
  padding: 20rpx;
  border-left: 4rpx solid #40E0D0;
}

.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
}

.info-item {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.info-item.full-width {
  grid-column: 1 / -1;
}

.info-label {
  font-size: 22rpx;
  color: #556B7A;
  font-weight: 600;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
}

.info-value {
  font-size: 24rpx;
  color: #1A4A4A;
  font-weight: 700;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.5);
}

/* 宜忌活动区 */
.activities-section {
  padding: 0 30rpx 20rpx;
  margin-bottom: 20rpx;
}

.activities-header {
  margin-bottom: 12rpx;
}

.activities-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #2F4F4F;
}

.activities-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.activity-group {
  display: flex;
  gap: 12rpx;
  align-items: flex-start;
}

.activity-label {
  display: flex;
  align-items: center;
  gap: 4rpx;
  padding: 8rpx 12rpx;
  border-radius: 12rpx;
  min-width: 80rpx;
  justify-content: center;
}

.activity-label.suitable {
  background: linear-gradient(45deg, #E8F5E8 0%, #F0FFF0 100%);
  border: 2rpx solid #4CAF50;
  color: #2E7D2E;
}

.activity-label.unsuitable {
  background: linear-gradient(45deg, #FFE8E8 0%, #FFF0F0 100%);
  border: 2rpx solid #F44336;
  color: #C62828;
}

.label-icon {
  font-size: 16rpx;
  font-weight: bold;
}

.label-text {
  font-size: 22rpx;
  font-weight: 600;
}

.activity-tags {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  align-items: center;
}

.activity-tag {
  font-size: 20rpx;
  padding: 6rpx 10rpx;
  border-radius: 12rpx;
  border: 1rpx solid #E0E0E0;
  background: #F8F9FA;
  color: #333;
  transition: all 0.3s ease;
}

.activity-tag.suitable-tag {
  border-color: #4CAF50;
  color: #2E7D2E;
  background: #F0FFF0;
}

.activity-tag.unsuitable-tag {
  border-color: #F44336;
  color: #C62828;
  background: #FFF0F0;
}



/* 重要程度指示器 */
.importance-indicator {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  z-index: 10;
}

.importance-indicator.popular {
  animation: popularPulse 2s ease-in-out infinite;
}

.importance-icon {
  font-size: 32rpx;
  filter: drop-shadow(0 2rpx 4rpx rgba(255, 0, 0, 0.3));
}

/* 底部说明 */
.disclaimer {
  margin-top: 40rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #FFFAF0 0%, #FFF8DC 100%);
  border-radius: 15rpx;
  border-left: 6rpx solid #DAA520;
}

.disclaimer-text {
  font-size: 22rpx;
  color: #B8860B;
  line-height: 1.5;
  text-align: center;
}

/* 动画效果 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes spinGlow {
  0% { 
    box-shadow: 0 0 10rpx rgba(200, 134, 13, 0.3);
  }
  100% { 
    box-shadow: 0 0 25rpx rgba(200, 134, 13, 0.6);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes titleShine {
  0%, 100% { 
    text-shadow: 2rpx 2rpx 4rpx rgba(255, 255, 255, 0.8);
  }
  50% { 
    text-shadow: 
      2rpx 2rpx 4rpx rgba(255, 255, 255, 0.8),
      0 0 20rpx rgba(47, 79, 79, 0.3);
  }
}

@keyframes countdownPulse {
  0%, 100% { 
    transform: scale(1);
    box-shadow: 
      0 4rpx 16rpx rgba(0, 0, 0, 0.1),
      inset 0 2rpx 4rpx rgba(255, 255, 255, 0.8),
      0 0 0 0 rgba(200, 134, 13, 0.4);
  }
  50% { 
    transform: scale(1.08);
    box-shadow: 
      0 8rpx 24rpx rgba(0, 0, 0, 0.15),
      inset 0 2rpx 4rpx rgba(255, 255, 255, 0.9),
      0 0 0 8rpx rgba(200, 134, 13, 0.2);
  }
}

@keyframes countdownGlow {
  0% {
    filter: drop-shadow(0 0 5rpx rgba(200, 134, 13, 0.3));
  }
  100% {
    filter: drop-shadow(0 0 15rpx rgba(200, 134, 13, 0.6));
  }
}

@keyframes numberBounce {
  0%, 20%, 50%, 80%, 100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-4rpx);
  }
  60% {
    transform: translateY(-2rpx);
  }
}

@keyframes popularPulse {
  0%, 100% { 
    transform: scale(1);
    opacity: 1;
  }
  50% { 
    transform: scale(1.2);
    opacity: 0.8;
  }
}

/* 卡片入场动画 */
.festival-card:nth-child(1) { animation-delay: 0.1s; }
.festival-card:nth-child(2) { animation-delay: 0.2s; }
.festival-card:nth-child(3) { animation-delay: 0.3s; }
.festival-card:nth-child(4) { animation-delay: 0.4s; }
.festival-card:nth-child(5) { animation-delay: 0.5s; }
.festival-card:nth-child(n+6) { animation-delay: 0.6s; }

/* 响应式适配 */
@media (max-width: 375px) {
  .main-content {
    margin: -30rpx 15rpx 0;
    padding: 30rpx 15rpx;
  }
  
  .festival-card {
    margin-bottom: 30rpx;
  }
  
  .festival-header {
    padding: 20rpx 20rpx 15rpx;
  }
  
  .core-info {
    padding: 0 20rpx 15rpx;
    margin-bottom: 15rpx;
  }
  
  .cultural-info,
  .traditional-info,
  .activities-section {
    padding: 0 20rpx 15rpx;
    margin-bottom: 15rpx;
  }
  
  .action-section {
    padding: 15rpx 20rpx 20rpx;
  }
  
  .festival-name {
    font-size: 32rpx;
  }
  
  .festival-emoji {
    font-size: 40rpx;
  }
  
  .countdown-circle {
    width: 80rpx;
    height: 80rpx;
  }
  
  .countdown-number {
    font-size: 28rpx;
  }
  
  .action-buttons {
    gap: 12rpx;
  }
  
  .action-btn {
    padding: 12rpx 8rpx;
    max-width: 100rpx;
  }
}

/* 节日类型特定样式 */
.festival-card[data-type="traditional"] {
  background: linear-gradient(135deg, #FFFAF0 0%, #FFF8DC 100%);
}

.festival-card[data-type="modern"] {
  background: linear-gradient(135deg, #FFF0F5 0%, #FFE4E1 100%);
}

.festival-card[data-type="western"] {
  background: linear-gradient(135deg, #F0FFF0 0%, #E0FFE0 100%);
}

.festival-card[data-type="solar_term"] {
  background: linear-gradient(135deg, #F0F8FF 0%, #E0F0FF 100%);
}

/* 悬浮和交互效果增强 */
.custom-tag:active {
  transform: scale(0.95);
  opacity: 0.8;
}

.activity-tag:active {
  transform: scale(0.95);
  background: #E9ECEF;
}

.countdown-circle:active {
  transform: scale(0.95);
}

/* 优化长文本显示 */
.festival-description {
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.info-value {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 加载状态优化 */
.loading-container {
  animation: fadeInUp 0.5s ease-out;
}

/* 错误状态优化 */
.error-container {
  animation: fadeInUp 0.5s ease-out;
}

.empty-container {
  animation: fadeInUp 0.5s ease-out;
}

/* 性能优化 */
.festival-card {
  will-change: transform, box-shadow;
}

.countdown-circle {
  will-change: transform;
}

/* 无障碍优化 */
.action-btn:focus {
  outline: 2rpx solid #2196F3;
  outline-offset: 2rpx;
}

.festival-card:focus {
  outline: 2rpx solid #2196F3;
  outline-offset: 4rpx;
}

/* 节日列表中的原生广告样式 */
ad-native {
  display: block;
  margin: 30rpx 0;
  padding: 0;
  border-radius: 24rpx;
  overflow: hidden;
  background: linear-gradient(135deg, #F8F9FA 0%, #E9ECEF 100%);
  border: 2rpx dashed #C8860D;
  opacity: 0.95;
  transition: all 0.3s ease;
  animation: fadeInUp 0.6s ease-out;
}

ad-native:hover {
  opacity: 1;
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 24rpx rgba(200, 134, 13, 0.15);
}

/* 广告内部样式 - 使用小程序兼容的选择器 */
ad-native {
  background: transparent;
  border: none;
  border-radius: 24rpx;
  overflow: hidden;
}

/* 注意：::part() 在微信小程序中不支持，已移除相关样式 */
/* 广告标识和关闭按钮样式将通过组件内部实现 */

/* 广告在节日列表中的特殊定位 */
.festival-list ad-native {
  /* 确保广告在列表中正确插入 */
  order: 999; /* 给广告一个较高的order值，但通过布局逻辑控制实际位置 */
}

/* 广告加载状态 */
ad-native[data-loading="true"] {
  background: linear-gradient(45deg, #f0f0f0 25%, transparent 25%), 
              linear-gradient(-45deg, #f0f0f0 25%, transparent 25%),
              linear-gradient(45deg, transparent 75%, #f0f0f0 75%), 
              linear-gradient(-45deg, transparent 75%, #f0f0f0 75%);
  background-size: 20rpx 20rpx;
  background-position: 0 0, 0 10rpx, 10rpx -10rpx, -10rpx 0rpx;
  animation: loadingStripes 1s linear infinite;
  min-height: 200rpx;
}

/* 广告错误状态 */
ad-native[data-error="true"] {
  background: linear-gradient(135deg, #FFE8E8 0%, #FFF0F0 100%);
  border-color: #F44336;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 120rpx;
  color: #C62828;
  font-size: 24rpx;
}

ad-native[data-error="true"]::before {
  content: "⚠️ 广告加载失败";
  display: block;
}

/* 广告入场动画延迟，与节日卡片协调 */
.festival-list ad-native:nth-child(4) { animation-delay: 0.7s; }
.festival-list ad-native:nth-child(7) { animation-delay: 1.0s; }
.festival-list ad-native:nth-child(10) { animation-delay: 1.3s; }

/* 适配不同屏幕尺寸 */
@media (max-width: 375px) {
  ad-native {
    margin: 20rpx 0;
  }
  
  /* 注意：移除了不兼容的::part()选择器 */
  /* 广告按钮样式将通过组件内部实现 */
}

/* 加载条纹动画 */
@keyframes loadingStripes {
  0% {
    background-position: 0 0, 0 10rpx, 10rpx -10rpx, -10rpx 0rpx;
  }
  100% {
    background-position: 20rpx 0rpx, 20rpx 10rpx, 30rpx -10rpx, 10rpx 0rpx;
  }
}

/* 广告悬浮效果优化 */
ad-native:active {
  transform: translateY(0rpx) scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(200, 134, 13, 0.1);
}

/* 确保广告与节日卡片在视觉上协调 */
ad-native + .festival-card {
  margin-top: 40rpx; /* 广告后的节日卡片增加间距 */
}

.festival-card + ad-native {
  margin-top: 30rpx; /* 节日卡片后的广告保持正常间距 */
}

/* 深色模式适配（预留） */
@media (prefers-color-scheme: dark) {
  .container {
    background: linear-gradient(180deg, #1a1a1a 0%, #2a2a2a 50%, #3a3a3a 100%);
  }
  
  .main-content {
    background: #2a2a2a;
    color: #ffffff;
  }
  
  .festival-card {
    background: #333333;
    border-color: #444444;
    color: #ffffff;
  }
  
  /* 深色模式下的广告样式 */
  ad-native {
    background: linear-gradient(135deg, #3a3a3a 0%, #4a4a4a 100%);
    border-color: #DAA520;
  }
}
