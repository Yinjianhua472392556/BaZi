/**profile.wxss**/

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F5E8 0%, #F0F8FF 50%, #FFF8DC 100%);
  position: relative;
}

/* 主要内容区域 */
.main-content {
  padding: 40rpx 30rpx;
  background: white;
  margin: -30rpx 20rpx 0;
  border-radius: 30rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #F0F0F0;
}

/* 副标题样式 */
.subtitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 30rpx;
  position: relative;
}

.subtitle::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 40rpx;
  height: 3rpx;
  background: linear-gradient(90deg, #40E0D0 0%, #48D1CC 100%);
  border-radius: 2rpx;
}

/* 菜单列表样式 */
.menu-list {
  margin-top: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 25rpx;
  background: #FAFAFA;
  border-radius: 18rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.menu-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 4rpx;
  height: 100%;
  background: linear-gradient(180deg, #40E0D0 0%, #48D1CC 100%);
  border-radius: 0 2rpx 2rpx 0;
}

.menu-item:active {
  background: #F0F0F0;
  transform: scale(0.98);
}

.menu-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #40E0D0 0%, #20B2AA 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(64, 224, 208, 0.3);
}

.menu-icon {
  font-size: 36rpx;
  color: white;
}

.menu-content {
  flex: 1;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.menu-arrow {
  font-size: 28rpx;
  color: #C8860D;
  font-weight: bold;
}

/* 版本信息卡片 */
.version-card {
  background: linear-gradient(135deg, #FFF8DC 0%, #F0F8FF 100%);
  border: 1rpx solid #E0E0E0;
}

.version-info {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.app-logo {
  font-size: 80rpx;
  margin-right: 30rpx;
  opacity: 0.8;
}

.app-details {
  text-align: left;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 8rpx;
}

.app-version {
  font-size: 24rpx;
  color: #999;
  background: #E0E0E0;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  display: inline-block;
}

/* 免责声明样式 */
.disclaimer {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding: 30rpx;
  line-height: 1.6;
  background: #F9F9F9;
  border-radius: 15rpx;
  margin: 40rpx 0 20rpx;
  border: 1rpx solid #F0F0F0;
}

/* 动画效果 */
.card {
  animation: fadeInUp 0.6s ease-out;
}

.menu-item:nth-child(1) { animation: slideInRight 0.6s ease-out 0.1s both; }
.menu-item:nth-child(2) { animation: slideInRight 0.6s ease-out 0.2s both; }
.menu-item:nth-child(3) { animation: slideInRight 0.6s ease-out 0.3s both; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(50rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes cloudFloat {
  0% {
    transform: translateX(-20rpx);
  }
  100% {
    transform: translateX(100vw);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .main-content {
    margin: -30rpx 15rpx 0;
    padding: 30rpx 20rpx;
  }
  
  .menu-item {
    padding: 25rpx 20rpx;
  }
  
  .menu-icon-wrapper {
    width: 70rpx;
    height: 70rpx;
    margin-right: 20rpx;
  }
  
  .menu-icon {
    font-size: 32rpx;
  }
  
  .menu-text {
    font-size: 28rpx;
  }
  
  .menu-desc {
    font-size: 22rpx;
  }
}

/* 收藏模态框样式 */
.collected-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  animation: fadeIn 0.3s ease-out;
}

.modal-content {
  background: white;
  border-radius: 20rpx;
  width: 100%;
  max-height: 80vh;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
  animation: scaleIn 0.3s ease-out;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 2rpx solid #F0F0F0;
  background: linear-gradient(135deg, #C8860D 0%, #DAA520 100%);
  color: white;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.modal-close {
  font-size: 36rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.modal-close:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

.modal-body {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 40rpx;
  text-align: center;
}

.empty-icon {
  font-size: 120rpx;
  opacity: 0.5;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
  line-height: 1.5;
}

/* 收藏列表样式 */
.collected-list {
  padding: 10rpx 0;
}

.collected-item {
  border: 2rpx solid #F0F0F0;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  background: #FAFAFA;
  transition: all 0.3s ease;
  animation: fadeInUp 0.3s ease forwards;
}

.collected-item:active {
  transform: scale(0.98);
  background: #F0F8FF;
  border-color: #C8860D;
}

.collected-main {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.collected-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2F4F4F;
}

.collected-score {
  display: flex;
  align-items: baseline;
}

.score-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #C8860D;
}

.score-label {
  font-size: 24rpx;
  color: #999;
  margin-left: 4rpx;
}

.collected-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.collected-pronunciation {
  font-size: 26rpx;
  color: #666;
}

.collected-luck {
  font-size: 26rpx;
  color: #28A745;
  font-weight: bold;
}

.collected-meaning {
  font-size: 24rpx;
  color: #888;
  line-height: 1.4;
  margin-bottom: 15rpx;
}

.collected-time {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 20rpx;
  padding: 8rpx 12rpx;
  background: #F0F0F0;
  border-radius: 8rpx;
  display: inline-block;
}

.collected-actions {
  display: flex;
  gap: 15rpx;
}

.action-btn {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  border-radius: 30rpx;
  border: none;
  font-weight: 500;
  transition: all 0.3s ease;
}

.view-detail-btn {
  background: white !important;
  color: #C8860D !important;
  border: 2rpx solid #C8860D;
}

.view-detail-btn::after {
  border: none;
}

.view-detail-btn:active {
  background: #FFF8DC !important;
  transform: scale(0.95);
}

.remove-btn {
  background: #FF6B6B !important;
  color: white !important;
}

.remove-btn::after {
  border: none;
}

.remove-btn:active {
  background: #FF5252 !important;
  transform: scale(0.95);
}

/* 名字详情模态框样式 */
.name-detail-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
  animation: fadeIn 0.3s ease-out;
}

.detail-section {
  margin-bottom: 30rpx;
}

.detail-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #F0F0F0;
  position: relative;
}

.detail-title::after {
  content: '';
  position: absolute;
  bottom: -2rpx;
  left: 0;
  width: 30rpx;
  height: 2rpx;
  background: #C8860D;
}

.detail-row {
  display: flex;
  margin-bottom: 15rpx;
  font-size: 26rpx;
}

.detail-label {
  color: #666;
  margin-right: 20rpx;
  min-width: 120rpx;
}

.detail-value {
  color: #333;
  flex: 1;
}

.detail-value.score {
  color: #C8860D;
  font-weight: bold;
}

.detail-value.luck {
  color: #28A745;
  font-weight: bold;
}

/* 五行字符分析样式 */
.wuxing-chars {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.wuxing-char {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  min-width: 80rpx;
  border: 2rpx solid #E0E0E0;
}

.char-text {
  font-size: 28rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 8rpx;
}

.char-wuxing {
  font-size: 22rpx;
  color: #C8860D;
  background: #FFF8E7;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

/* 五格分析样式 */
.wuge-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 15rpx;
}

.wuge-item {
  background: #F8F9FA;
  border-radius: 12rpx;
  padding: 20rpx;
  text-align: center;
  border: 2rpx solid #E0E0E0;
}

.wuge-name {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.wuge-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 5rpx;
}

.wuge-wuxing {
  font-size: 22rpx;
  color: #C8860D;
  margin-bottom: 5rpx;
}

.wuge-luck {
  font-size: 20rpx;
  color: #28A745;
  font-weight: 500;
}

/* 寓意文本样式 */
.meaning-text {
  font-size: 26rpx;
  color: #333;
  line-height: 1.6;
  padding: 20rpx;
  background: #F8F9FA;
  border-radius: 12rpx;
  border-left: 4rpx solid #C8860D;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 主要内容区域过渡动画 */
.main-content {
  animation: slideInUp 0.6s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
