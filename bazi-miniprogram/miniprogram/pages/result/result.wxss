/**result.wxss**/

/* CSS 变量定义 */
page {
  --primary-color: #00BCD4;
  --primary-gradient: linear-gradient(135deg, #00BCD4 0%, #0097A7 100%);
  --secondary-color: #FFB74D;
  --accent-color: #FF7043;
  --success-color: #4CAF50;
  --text-primary: #263238;
  --text-secondary: #546E7A;
  --text-hint: #90A4AE;
  --bg-primary: #FAFAFA;
  --bg-secondary: #F5F5F5;
  --card-shadow: 0 4rpx 20rpx rgba(0, 188, 212, 0.15);
  --card-shadow-hover: 0 8rpx 30rpx rgba(0, 188, 212, 0.25);
  --border-radius: 24rpx;
  --border-radius-large: 32rpx;
}

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #E3F2FD 0%, #F1F8E9 50%, #FFF3E0 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰元素 */
.container::before {
  content: '';
  position: absolute;
  top: -50rpx;
  right: -50rpx;
  width: 200rpx;
  height: 200rpx;
  background: radial-gradient(circle, rgba(0, 188, 212, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 6s ease-in-out infinite;
}

.container::after {
  content: '';
  position: absolute;
  bottom: -30rpx;
  left: -30rpx;
  width: 150rpx;
  height: 150rpx;
  background: radial-gradient(circle, rgba(255, 183, 77, 0.1) 0%, transparent 70%);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite reverse;
}

/* 主要内容区域 */
.main-content {
  padding: 50rpx 30rpx 40rpx;
  background: white;
  margin: 20rpx 20rpx 0;
  border-radius: var(--border-radius-large);
  box-shadow: var(--card-shadow);
  position: relative;
  z-index: 10;
  overflow: hidden;
}

/* 内容区域装饰 */
.main-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: var(--primary-gradient);
  border-radius: var(--border-radius-large) var(--border-radius-large) 0 0;
}

/* 页面标题 */
.result-title {
  font-size: 52rpx;
  font-weight: 700;
  color: var(--text-primary);
  text-align: center;
  margin-bottom: 50rpx;
  position: relative;
  letter-spacing: 2rpx;
}

.result-title::before {
  content: '✨';
  position: absolute;
  left: -60rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  animation: sparkle 2s ease-in-out infinite;
}

.result-title::after {
  content: '✨';
  position: absolute;
  right: -60rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 40rpx;
  animation: sparkle 2s ease-in-out infinite 1s;
}

/* 信息卡片容器 */
.info-table {
  background: linear-gradient(135deg, #F8F9FA 0%, #FFFFFF 100%);
  border-radius: var(--border-radius);
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid rgba(0, 188, 212, 0.1);
}

.table-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid rgba(0, 188, 212, 0.1);
  position: relative;
  transition: all 0.3s ease;
}

.table-row:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.table-row::before {
  content: '';
  position: absolute;
  left: -30rpx;
  top: 0;
  bottom: 0;
  width: 6rpx;
  background: var(--primary-gradient);
  border-radius: 3rpx;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.table-row:hover::before {
  opacity: 1;
}

.table-label {
  font-size: 32rpx;
  color: var(--text-secondary);
  font-weight: 600;
  min-width: 140rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.table-label::after {
  content: '';
  width: 8rpx;
  height: 8rpx;
  background: var(--primary-color);
  border-radius: 50%;
  margin-left: 15rpx;
  opacity: 0.6;
}

.table-value {
  font-size: 34rpx;
  color: var(--text-primary);
  font-weight: 700;
  text-align: right;
  flex: 1;
  margin-left: 20rpx;
  padding: 15rpx 20rpx;
  background: linear-gradient(135deg, rgba(0, 188, 212, 0.05) 0%, rgba(255, 183, 77, 0.05) 100%);
  border-radius: 12rpx;
  border: 1rpx solid rgba(0, 188, 212, 0.15);
  transition: all 0.3s ease;
}

.table-value:active {
  transform: scale(0.98);
  background: linear-gradient(135deg, rgba(0, 188, 212, 0.1) 0%, rgba(255, 183, 77, 0.1) 100%);
}

/* 八字详解说明 */
.bazi-explanation {
  text-align: center;
  font-size: 28rpx;
  color: var(--text-hint);
  margin: 30rpx 0 50rpx;
  padding: 25rpx 30rpx;
  background: linear-gradient(135deg, rgba(0, 188, 212, 0.05) 0%, rgba(255, 183, 77, 0.05) 100%);
  border-radius: var(--border-radius);
  border: 1rpx solid rgba(0, 188, 212, 0.1);
  position: relative;
  font-style: italic;
  letter-spacing: 1rpx;
}

.bazi-explanation::before {
  content: '"';
  position: absolute;
  left: 15rpx;
  top: 10rpx;
  font-size: 40rpx;
  color: var(--primary-color);
  opacity: 0.3;
  font-family: serif;
}

.bazi-explanation::after {
  content: '"';
  position: absolute;
  right: 15rpx;
  bottom: 10rpx;
  font-size: 40rpx;
  color: var(--primary-color);
  opacity: 0.3;
  font-family: serif;
}

/* 操作按钮区域 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 25rpx;
  margin: 50rpx 0;
}

/* 主要按钮样式 */
.btn-primary {
  background: var(--primary-gradient) !important;
  color: white !important;
  font-size: 36rpx;
  font-weight: 700;
  padding: 30rpx 40rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: var(--card-shadow-hover);
  position: relative;
  overflow: hidden;
  letter-spacing: 2rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.btn-primary::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.4), transparent);
  transition: left 0.5s ease;
}

.btn-primary:active::before {
  left: 100%;
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(0, 188, 212, 0.6);
}

/* 次要按钮样式 */
.btn-secondary {
  background: white !important;
  color: var(--primary-color) !important;
  font-size: 34rpx;
  font-weight: 600;
  padding: 28rpx 40rpx;
  border: 3rpx solid var(--primary-color);
  border-radius: 50rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 188, 212, 0.15);
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  letter-spacing: 1rpx;
}

.btn-secondary::after {
  border: none;
}

.btn-secondary:active {
  background: linear-gradient(135deg, rgba(0, 188, 212, 0.05) 0%, rgba(0, 188, 212, 0.1) 100%) !important;
  transform: scale(0.95);
  border-color: var(--primary-color);
}

/* 按钮图标 */
.btn-icon {
  margin-right: 15rpx;
  font-size: 32rpx;
  vertical-align: middle;
}

/* 广告区域 */
.ad-section {
  margin-top: 50rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, rgba(0, 188, 212, 0.03) 0%, rgba(255, 183, 77, 0.03) 100%);
  border-radius: var(--border-radius);
  border: 1rpx solid rgba(0, 188, 212, 0.1);
  position: relative;
  overflow: hidden;
}

.ad-section::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color) 0%, var(--secondary-color) 100%);
  border-radius: var(--border-radius) var(--border-radius) 0 0;
}

.ad-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.ad-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  background: #F0F0F0;
}

.ad-placeholder {
  width: 120rpx;
  height: 120rpx;
  border-radius: 15rpx;
  background: #F0F0F0;
  border: 2rpx dashed #CCCCCC;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.ad-placeholder.show {
  opacity: 1;
}

.placeholder-text {
  font-size: 24rpx;
  color: #999999;
  text-align: center;
}

.ad-text {
  flex: 1;
}

.ad-title {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  margin-bottom: 8rpx;
}

.ad-subtitle {
  font-size: 24rpx;
  color: #999;
}

.ad-button {
  background: #4CAF50;
  color: white;
  font-size: 24rpx;
  padding: 15rpx 25rpx;
  border-radius: 25rpx;
  border: none;
  min-width: 120rpx;
}

.ad-button::after {
  border: none;
}

/* 分析结果弹窗 */
.analysis-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.6);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  backdrop-filter: blur(8rpx);
}

.analysis-modal.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  width: 90%;
  max-width: 650rpx;
  max-height: 85vh;
  background: white;
  border-radius: var(--border-radius-large);
  overflow: hidden;
  transform: scale(0.7) translateY(100rpx);
  transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  display: flex;
  flex-direction: column;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.analysis-modal.show .modal-content {
  transform: scale(1) translateY(0);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  background: var(--primary-gradient);
  color: white;
  position: relative;
}

.modal-header::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 1rpx;
  background: rgba(255, 255, 255, 0.2);
}

.modal-title {
  font-size: 38rpx;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.modal-close {
  font-size: 40rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.15);
  transition: all 0.3s ease;
  cursor: pointer;
}

.modal-close:active {
  background: rgba(255, 255, 255, 0.25);
  transform: scale(0.9);
}

.modal-body {
  flex: 1;
  padding: 40rpx;
  overflow-y: auto;
  min-height: 0;
}

.analysis-section {
  margin-bottom: 50rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #F8F9FA 0%, #FFFFFF 100%);
  border-radius: var(--border-radius);
  border-left: 6rpx solid var(--primary-color);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.analysis-section:last-child {
  margin-bottom: 0;
}

.analysis-title {
  font-size: 34rpx;
  font-weight: 700;
  color: var(--text-primary);
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  letter-spacing: 1rpx;
}

.analysis-title::before {
  content: '▶';
  color: var(--primary-color);
  font-size: 24rpx;
  margin-right: 15rpx;
}

.analysis-content {
  font-size: 30rpx;
  line-height: 1.8;
  color: var(--text-secondary);
  word-wrap: break-word;
  word-break: normal;
  white-space: normal;
  overflow-wrap: break-word;
  text-align: justify;
  letter-spacing: 0.5rpx;
}

.fortune-score {
  display: inline-block;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8A80 100%);
  color: white;
  font-weight: 700;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 107, 0.3);
}

.fortune-desc {
  color: var(--text-secondary);
  margin-top: 10rpx;
}

.modal-footer {
  padding: 30rpx 40rpx;
  border-top: 1rpx solid rgba(0, 188, 212, 0.1);
  background: white;
}

.btn-save {
  width: 100%;
  background: var(--success-color) !important;
  color: white !important;
  font-size: 34rpx;
  font-weight: 700;
  padding: 30rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
  letter-spacing: 1rpx;
}

.btn-save::after {
  border: none;
}

.btn-save:active {
  transform: scale(0.95);
  box-shadow: 0 4rpx 15rpx rgba(76, 175, 80, 0.5);
}

/* 动画关键帧 */
@keyframes float {
  0%, 100% {
    transform: translateY(0rpx);
  }
  50% {
    transform: translateY(-20rpx);
  }
}

@keyframes sparkle {
  0%, 100% {
    opacity: 0.5;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.2);
  }
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(60rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInScale {
  from {
    opacity: 0;
    transform: scale(0.8);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes pulse {
  0% {
    box-shadow: 0 0 0 0 rgba(0, 188, 212, 0.4);
  }
  70% {
    box-shadow: 0 0 0 20rpx rgba(0, 188, 212, 0);
  }
  100% {
    box-shadow: 0 0 0 0 rgba(0, 188, 212, 0);
  }
}

/* 页面加载动画 */
.main-content {
  animation: slideInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.info-table {
  animation: fadeInScale 0.6s ease-out 0.2s both;
}

.action-buttons {
  animation: fadeInScale 0.6s ease-out 0.4s both;
}

.ad-section {
  animation: fadeInScale 0.6s ease-out 0.6s both;
}

/* 响应式适配 */
@media (max-width: 375px) {
  .main-content {
    margin: 15rpx 15rpx 0;
    padding: 40rpx 25rpx;
  }
  
  .result-title {
    font-size: 48rpx;
  }
  
  .result-title::before,
  .result-title::after {
    font-size: 32rpx;
    left: -40rpx;
    right: -40rpx;
  }
  
  .table-label {
    font-size: 30rpx;
    min-width: 120rpx;
  }
  
  .table-value {
    font-size: 32rpx;
    padding: 12rpx 16rpx;
  }
  
  .btn-primary,
  .btn-secondary {
    font-size: 32rpx;
    padding: 25rpx 35rpx;
  }
  
  .modal-content {
    width: 95%;
    max-height: 90vh;
  }
  
  .modal-header {
    padding: 30rpx;
  }
  
  .modal-body {
    padding: 30rpx 25rpx;
  }
  
  .analysis-section {
    padding: 25rpx;
    margin-bottom: 35rpx;
  }
  
  .analysis-title {
    font-size: 30rpx;
  }
  
  .analysis-content {
    font-size: 28rpx;
  }
}

/* 特殊文本样式 */
.bazi-text {
  font-family: 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
  background: linear-gradient(135deg, #FF6B6B 0%, #4ECDC4 50%, #45B7D1 100%);
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  font-weight: 800;
  letter-spacing: 2rpx;
}

.wuxing-text {
  background: linear-gradient(135deg, #FFD93D 0%, #6BCF7F 30%, #4D96FF 60%, #9B59B6 80%, #E67E22 100%);
  background-clip: text;
  -webkit-background-clip: text;
  color: transparent;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.lack-text {
  color: #FF6B6B;
  font-weight: 700;
  background: rgba(255, 107, 107, 0.1);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(255, 107, 107, 0.3);
}

.zodiac-text {
  color: var(--secondary-color);
  font-weight: 700;
  font-size: 36rpx;
}

/* 表格行动画效果 */
.table-row {
  animation: fadeInLeft 0.6s ease-out;
}

.table-row:nth-child(1) { animation-delay: 0.1s; }
.table-row:nth-child(2) { animation-delay: 0.2s; }
.table-row:nth-child(3) { animation-delay: 0.3s; }
.table-row:nth-child(4) { animation-delay: 0.4s; }
.table-row:nth-child(5) { animation-delay: 0.5s; }
.table-row:nth-child(6) { animation-delay: 0.6s; }

@keyframes fadeInLeft {
  from {
    opacity: 0;
    transform: translateX(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

/* 按钮悬浮效果 */
.btn-primary:not(:active) {
  animation: buttonPulse 3s ease-in-out infinite;
}

@keyframes buttonPulse {
  0%, 100% {
    box-shadow: var(--card-shadow-hover);
  }
  50% {
    box-shadow: var(--card-shadow-hover), 0 0 0 8rpx rgba(0, 188, 212, 0.1);
  }
}

/* 深色模式支持 */
@media (prefers-color-scheme: dark) {
  page {
    --text-primary: #E0E0E0;
    --text-secondary: #B0B0B0;
    --text-hint: #757575;
    --bg-primary: #121212;
    --bg-secondary: #1E1E1E;
  }
  
  .container {
    background: linear-gradient(135deg, #1A1A2E 0%, #16213E 50%, #0F3460 100%);
  }
  
  .main-content {
    background: #1E1E1E;
    border: 1rpx solid #333;
  }
  
  .info-table {
    background: linear-gradient(135deg, #2A2A2A 0%, #1E1E1E 100%);
    border: 1rpx solid rgba(0, 188, 212, 0.2);
  }
  
  .table-value {
    background: linear-gradient(135deg, rgba(0, 188, 212, 0.1) 0%, rgba(255, 183, 77, 0.1) 100%);
    border: 1rpx solid rgba(0, 188, 212, 0.2);
  }
  
  .bazi-explanation {
    background: linear-gradient(135deg, rgba(0, 188, 212, 0.1) 0%, rgba(255, 183, 77, 0.1) 100%);
    border: 1rpx solid rgba(0, 188, 212, 0.2);
  }
  
  .analysis-section {
    background: linear-gradient(135deg, #2A2A2A 0%, #1E1E1E 100%);
  }
  
  .modal-content {
    background: #1E1E1E;
  }
  
  .modal-body {
    background: #1E1E1E;
  }
}
