<!--激励视频广告组件模板-->
<view class="reward-video-container" wx:if="{{showComponent}}">
  <!-- 奖励描述 -->
  <view class="reward-desc" wx:if="{{showRewardDesc && rewardDesc}}">
    <text class="desc-text">{{rewardDesc}}</text>
  </view>

  <!-- 观看广告按钮 -->
  <button 
    class="{{getButtonClass()}}"
    disabled="{{disabled || buttonState !== 'normal'}}"
    bindtap="onWatchAdClick">
    
    <!-- 加载状态 -->
    <view class="btn-loading-icon" wx:if="{{buttonState === 'loading'}}"></view>
    
    <!-- 按钮文字 -->
    <text class="btn-text">
      {{buttonState === 'loading' ? '加载中...' : buttonText}}
    </text>
    
    <!-- 视频图标 -->
    <view class="video-icon" wx:if="{{buttonState === 'normal'}}">
      <view class="play-icon">▶</view>
    </view>
  </button>

  <!-- 错误提示 -->
  <view class="error-tip" wx:if="{{showError}}">
    <text class="error-text">{{errorMsg}}</text>
    <button class="retry-btn" size="mini" bindtap="retryLoad">重试</button>
  </view>
</view>

<!-- 占位符（当组件未启用时） -->
<view class="reward-video-placeholder" wx:else>
  <!-- 可以放置一些占位内容或者完全隐藏 -->
</view>
