<!-- 原生广告组件 -->
<view class="ad-native-container" wx:if="{{adConfig && visible}}">
  <!-- 模拟广告 -->
  <view wx:if="{{isSimulation}}" class="ad-native-mock" style="background-color: {{adConfig.backgroundColor}}; border-color: {{adConfig.borderColor}}">
    <!-- 广告标识 -->
    <view class="ad-label">广告</view>
    
    <!-- 广告内容 -->
    <view class="ad-content">
      <!-- 广告图片 -->
      <view class="ad-image-container" wx:if="{{adConfig.image}}">
        <image class="ad-image" src="{{adConfig.image}}" mode="aspectFill"></image>
      </view>
      
      <!-- 广告文字内容 -->
      <view class="ad-text-content">
        <view class="ad-title" style="color: {{adConfig.textColor}}">{{adConfig.title}}</view>
        <view class="ad-description" style="color: {{adConfig.textColor}}">{{adConfig.description}}</view>
        
        <!-- 广告按钮 -->
        <view class="ad-button" wx:if="{{adConfig.buttonText}}" bindtap="onAdClick">
          {{adConfig.buttonText}}
        </view>
      </view>
    </view>
    
    <!-- 关闭按钮 -->
    <view class="ad-close" bindtap="onAdClose" wx:if="{{showCloseButton}}">×</view>
  </view>
  
  <!-- 真实广告 -->
  <view wx:else class="ad-native-real">
    <!-- 这里将集成微信原生广告组件 -->
    <ad wx:if="{{adConfig.unitId}}" unit-id="{{adConfig.unitId}}" ad-type="native" binderror="onAdError" bindload="onAdLoad"></ad>
  </view>
</view>
