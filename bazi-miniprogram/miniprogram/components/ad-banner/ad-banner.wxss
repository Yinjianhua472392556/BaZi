/* Banner广告组件样式 */
.ad-banner-container {
  width: 100%;
  margin: 20rpx 0;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}

/* 加载状态 */
.ad-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 20rpx;
  background-color: #f8f9fa;
  color: #6c757d;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #e9ecef;
  border-top: 6rpx solid #007bff;
  border-radius: 50%;
  margin-bottom: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #6c757d;
}

/* 错误状态 */
.ad-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 20rpx;
  background-color: #fff5f5;
  border: 2rpx solid #fed7d7;
  color: #c53030;
}

.error-icon {
  width: 50rpx;
  height: 50rpx;
  background-color: #fc8181;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 26rpx;
  text-align: center;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.retry-btn {
  background-color: #e53e3e;
  color: white;
  border: none;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
}

/* 模拟广告样式 */
.mock-ad-banner {
  width: 100%;
  min-height: 120rpx;
}

.mock-banner-content {
  position: relative;
  width: 100%;
  padding: 24rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-height: 120rpx;
}

.mock-banner-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  line-height: 1.3;
}

.mock-banner-desc {
  font-size: 26rpx;
  opacity: 0.9;
  line-height: 1.4;
  margin-bottom: 12rpx;
}

.mock-banner-tag {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  opacity: 0.8;
}

/* 广告占位符 */
.ad-placeholder {
  /* 完全隐藏，或者显示一些占位内容 */
  display: none;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .ad-banner-container {
    margin: 16rpx 0;
  }
  
  .ad-loading {
    padding: 50rpx 16rpx;
  }
  
  .ad-error {
    padding: 32rpx 16rpx;
  }
  
  .mock-banner-content {
    padding: 20rpx;
    min-height: 100rpx;
  }
  
  .mock-banner-title {
    font-size: 28rpx;
  }
  
  .mock-banner-desc {
    font-size: 24rpx;
  }
}

/* 响应式设计 */
@media (max-width: 320px) {
  .ad-banner-container {
    margin: 8rpx 0;
    min-height: 100rpx;
  }
  
  .loading-text,
  .error-text {
    font-size: 20rpx;
  }
  
  .retry-btn {
    font-size: 20rpx;
    padding: 6rpx 16rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .ad-banner-container {
    background-color: #2c2c2c;
  }
  
  .loading-text {
    color: #ccc;
  }
  
  .error-text {
    color: #aaa;
  }
  
  .loading-icon {
    border-color: #444;
    border-top-color: #007aff;
  }
}

/* 自定义主题样式类 */
.ad-banner-container.light-theme {
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
}

.ad-banner-container.dark-theme {
  background-color: #1a1a1a;
  border: 1rpx solid #333;
}

.ad-banner-container.minimal {
  background-color: transparent;
  border: none;
  margin: 5rpx 0;
}

.ad-banner-container.rounded {
  border-radius: 20rpx;
}

.ad-banner-container.shadow {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 广告容器尺寸变体 */
.ad-banner-container.small {
  min-height: 80rpx;
}

.ad-banner-container.large {
  min-height: 160rpx;
}

/* 动画效果 */
.ad-banner-container {
  opacity: 0;
  animation: fadeIn 0.3s ease-in-out forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 错误状态动画 */
.ad-error {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 无障碍访问 */
.retry-btn:focus {
  outline: 2rpx solid #007aff;
  outline-offset: 2rpx;
}

/* 防止广告内容溢出 */
.ad-banner-container ad {
  max-width: 100%;
  height: auto;
}
