/* Banner广告组件样式 */

.ad-banner-container {
  width: 100%;
  margin: 10rpx 0;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f5f5f5;
  min-height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 广告加载状态 */
.ad-loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  color: #999;
}

.loading-icon {
  width: 30rpx;
  height: 30rpx;
  border: 3rpx solid #e0e0e0;
  border-top: 3rpx solid #007aff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 10rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

/* 广告错误状态 */
.ad-error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  color: #ff4757;
  text-align: center;
}

.error-icon {
  width: 40rpx;
  height: 40rpx;
  background-color: #ff4757;
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.error-text {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 15rpx;
  max-width: 500rpx;
  line-height: 1.4;
}

.retry-btn {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  font-size: 22rpx;
}

.retry-btn:active {
  background-color: #0056b3;
}

/* 广告占位符 */
.ad-placeholder {
  display: none; /* 默认隐藏占位符 */
}

/* 实际广告样式调整 */
.ad-banner-container ad {
  width: 100%;
  border-radius: 8rpx;
  overflow: hidden;
}

/* 响应式设计 */
@media (max-width: 320px) {
  .ad-banner-container {
    margin: 8rpx 0;
    min-height: 100rpx;
  }
  
  .loading-text,
  .error-text {
    font-size: 20rpx;
  }
  
  .retry-btn {
    font-size: 20rpx;
    padding: 6rpx 16rpx;
  }
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .ad-banner-container {
    background-color: #2c2c2c;
  }
  
  .loading-text {
    color: #ccc;
  }
  
  .error-text {
    color: #aaa;
  }
  
  .loading-icon {
    border-color: #444;
    border-top-color: #007aff;
  }
}

/* 自定义主题样式类 */
.ad-banner-container.light-theme {
  background-color: #ffffff;
  border: 1rpx solid #e0e0e0;
}

.ad-banner-container.dark-theme {
  background-color: #1a1a1a;
  border: 1rpx solid #333;
}

.ad-banner-container.minimal {
  background-color: transparent;
  border: none;
  margin: 5rpx 0;
}

.ad-banner-container.rounded {
  border-radius: 20rpx;
}

.ad-banner-container.shadow {
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 广告容器尺寸变体 */
.ad-banner-container.small {
  min-height: 80rpx;
}

.ad-banner-container.large {
  min-height: 160rpx;
}

/* 动画效果 */
.ad-banner-container {
  opacity: 0;
  animation: fadeIn 0.3s ease-in-out forwards;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 错误状态动画 */
.ad-error {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 无障碍访问 */
.retry-btn:focus {
  outline: 2rpx solid #007aff;
  outline-offset: 2rpx;
}

/* 防止广告内容溢出 */
.ad-banner-container ad {
  max-width: 100%;
  height: auto;
}
