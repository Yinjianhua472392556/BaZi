/* book-recommendation.wxss - 书籍推荐组件样式 */

.book-recommendation {
  margin: 20rpx 0;
  padding: 0 20rpx;
}

/* 标题区域 */
.recommendation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.recommendation-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.refresh-btn {
  padding: 10rpx;
  border-radius: 50%;
  background: #f8f8f8;
  transition: all 0.3s ease;
}

.refresh-btn:hover {
  background: #e8e8e8;
  transform: rotate(180deg);
}

.refresh-icon {
  font-size: 28rpx;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  color: #999;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #C8860D;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误状态 */
.error-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  color: #999;
}

.error-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.error-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.retry-btn {
  padding: 10rpx 20rpx;
  background: #C8860D;
  color: white;
  border: none;
  border-radius: 10rpx;
  font-size: 28rpx;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  color: #999;
}

.empty-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
}

/* 推荐列表 - 卡片布局 */
.recommendations-list.card-layout {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.book-item.card-item {
  display: flex;
  background: white;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  padding: 20rpx;
  transition: all 0.3s ease;
}

.book-item.card-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.15);
}

/* 推荐列表 - 列表布局 */
.recommendations-list.list-layout {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.book-item.list-item {
  display: flex;
  background: white;
  border-radius: 12rpx;
  padding: 15rpx;
  border: 2rpx solid #f0f0f0;
}

/* 推荐列表 - 简洁布局 */
.recommendations-list.minimal-layout {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.book-item.minimal-item {
  display: flex;
  background: #f8f8f8;
  border-radius: 8rpx;
  padding: 10rpx;
}

/* 书籍封面 */
.book-cover {
  position: relative;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.card-item .book-cover {
  width: 120rpx;
  height: 160rpx;
}

.list-item .book-cover {
  width: 100rpx;
  height: 130rpx;
}

.minimal-item .book-cover {
  width: 80rpx;
  height: 100rpx;
  margin-right: 15rpx;
}

.cover-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  background: #f0f0f0;
}

.price-tag {
  position: absolute;
  top: -5rpx;
  right: -5rpx;
  background: #ff4d4f;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 8rpx;
  border-radius: 8rpx;
  line-height: 1;
}

/* 书籍信息 */
.book-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.book-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.minimal-item .book-title {
  font-size: 28rpx;
  -webkit-line-clamp: 1;
}

.book-author {
  font-size: 24rpx;
  color: #666;
}

.book-description {
  font-size: 24rpx;
  color: #888;
  line-height: 1.4;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.minimal-item .book-description {
  display: none;
}

/* 推荐理由 */
.recommendation-reason {
  background: #f8f9fa;
  padding: 10rpx 12rpx;
  border-radius: 8rpx;
  margin: 5rpx 0;
}

.reason-label {
  font-size: 22rpx;
  color: #C8860D;
  font-weight: bold;
}

.reason-text {
  font-size: 22rpx;
  color: #555;
  margin-left: 5rpx;
}

.minimal-item .recommendation-reason {
  display: none;
}

/* 评分和销量 */
.book-stats {
  display: flex;
  gap: 20rpx;
  align-items: center;
  margin: 5rpx 0;
}

.rating {
  display: flex;
  align-items: center;
  gap: 5rpx;
}

.rating-stars {
  font-size: 20rpx;
}

.rating-score {
  font-size: 22rpx;
  color: #ff9900;
  font-weight: bold;
}

.sales-text {
  font-size: 20rpx;
  color: #999;
}

.minimal-item .book-stats {
  display: none;
}

/* 标签 */
.book-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin: 8rpx 0;
}

.tag-item {
  font-size: 20rpx;
  color: #C8860D;
  background: rgba(200, 134, 13, 0.1);
  padding: 4rpx 8rpx;
  border-radius: 6rpx;
  border: 1rpx solid rgba(200, 134, 13, 0.3);
}

.minimal-item .book-tags {
  display: none;
}

/* 操作按钮 */
.book-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-top: 10rpx;
}

.list-item .book-actions {
  align-items: flex-end;
  justify-content: center;
  margin-left: 10rpx;
}

.action-btn {
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
  line-height: 1.2;
  transition: all 0.3s ease;
}

.primary-btn {
  background: #C8860D;
  color: white;
  padding: 12rpx 20rpx;
  font-weight: bold;
}

.primary-btn:hover {
  background: #b8760b;
}

.secondary-actions {
  display: flex;
  gap: 8rpx;
}

.secondary-btn {
  background: #f8f8f8;
  color: #666;
  padding: 8rpx 12rpx;
  border: 1rpx solid #e0e0e0;
  font-size: 20rpx;
}

.secondary-btn:hover {
  background: #e8e8e8;
}

.btn-icon {
  margin-right: 4rpx;
}

.minimal-item .book-actions {
  flex-direction: row;
  gap: 5rpx;
}

.minimal-item .secondary-actions {
  display: none;
}

.minimal-item .primary-btn {
  padding: 8rpx 12rpx;
  font-size: 22rpx;
}

/* 更多推荐按钮 */
.more-recommendations {
  margin-top: 20rpx;
  text-align: center;
}

.more-btn {
  background: transparent;
  color: #C8860D;
  border: 2rpx solid #C8860D;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  display: inline-flex;
  align-items: center;
  gap: 8rpx;
  transition: all 0.3s ease;
}

.more-btn:hover {
  background: #C8860D;
  color: white;
}

.more-icon {
  font-size: 24rpx;
}

/* 响应式设计 */
@media (max-width: 600rpx) {
  .book-item.card-item {
    flex-direction: column;
  }
  
  .book-cover {
    margin-right: 0;
    margin-bottom: 15rpx;
    align-self: center;
  }
  
  .book-actions {
    flex-direction: row;
    justify-content: space-between;
  }
  
  .secondary-actions {
    flex-direction: row;
  }
}

/* 暗色模式支持 */
@media (prefers-color-scheme: dark) {
  .book-recommendation {
    color: #e0e0e0;
  }
  
  .book-item {
    background: #2a2a2a !important;
    border-color: #404040 !important;
  }
  
  .book-title {
    color: #e0e0e0;
  }
  
  .recommendation-reason {
    background: #404040;
  }
  
  .tag-item {
    background: rgba(200, 134, 13, 0.2);
    border-color: rgba(200, 134, 13, 0.5);
  }
  
  .secondary-btn {
    background: #404040;
    color: #e0e0e0;
    border-color: #606060;
  }
}
