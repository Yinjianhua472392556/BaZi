/**index.wxss**/

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F5E8 0%, #F0F8FF 50%, #FFF8DC 100%);
  position: relative;
}

/* 简化的页面头部 */
.page-header {
  padding: 20rpx 30rpx 20rpx;
  position: relative;
  z-index: 10;
}

.page-title-container {
  text-align: center;
  margin-bottom: 10rpx;
}

.page-title {
  font-size: 42rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
}

.page-subtitle {
  font-size: 26rpx;
  color: #666;
  opacity: 0.9;
}

.page-decoration {
  text-align: center;
  font-size: 32rpx;
  color: #C8860D;
  opacity: 0.8;
}

/* 主要内容区域 */
.main-content {
  padding: 40rpx 30rpx;
  background: white;
  margin: -30rpx 20rpx 0;
  border-radius: 30rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
}


/* 卡片样式更新 */
.card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #F0F0F0;
}

/* 按钮样式更新 */
.btn-primary {
  background: linear-gradient(135deg, #C8860D 0%, #DAA520 100%) !important;
  color: white !important;
  font-size: 36rpx;
  font-weight: bold;
  padding: 25rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 20rpx rgba(200, 134, 13, 0.3);
  margin: 20rpx 0;
  position: relative;
  overflow: hidden;
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  background: linear-gradient(135deg, #B8760C 0%, #CA9510 100%) !important;
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(200, 134, 13, 0.5);
}

.btn-secondary {
  background: white !important;
  color: #C8860D !important;
  font-size: 34rpx;
  font-weight: 600;
  padding: 25rpx;
  border: 3rpx solid #C8860D;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 15rpx rgba(200, 134, 13, 0.2);
  margin: 20rpx 0;
}

.btn-secondary::after {
  border: none;
}

.btn-secondary:active {
  background: #FFF8DC !important;
  transform: scale(0.98);
}

/* 单选按钮组 */
.radio-item {
  display: inline-block;
  margin-right: 40rpx;
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #2F4F4F;
  font-weight: 500;
}

.radio-item radio {
  margin-right: 10rpx;
}

/* 快速功能区域 */
.quick-actions {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 40rpx;
  background: linear-gradient(45deg, #F8F9FA 0%, #E9ECEF 100%);
  border-radius: 20rpx;
  min-width: 240rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #E0E0E0;
}

.quick-item:active {
  background: #F0F0F0;
  transform: scale(0.95);
}

.quick-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.quick-item text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 按钮禁用状态 */
.btn-primary[disabled] {
  background: #DDD !important;
  color: #999 !important;
  box-shadow: none !important;
}

.btn-primary[disabled]:active {
  transform: none !important;
}

/* 日期时间选择器优化 */
.picker[data-selected="true"] {
  color: #333;
  border-color: #C8860D;
  background: #FFF8DC;
}

/* 响应式布局优化 */
@media (max-width: 375px) {
  .container {
    padding: 30rpx 15rpx;
  }
  
  .title {
    font-size: 42rpx;
  }
  
  .quick-actions {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .quick-item {
    min-width: auto;
    width: 100%;
  }
}

/* 加载状态优化 */
.calculating {
  opacity: 0.7;
  pointer-events: none;
}

/* 输入框焦点状态 */
.input-field:focus {
  border-color: #C8860D;
  box-shadow: 0 0 0 4rpx rgba(200, 134, 13, 0.1);
}

/* 动画效果 */
.card {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 标签样式优化 */
.input-label {
  position: relative;
  color: #2F4F4F;
  font-weight: 600;
  font-size: 32rpx;
}

.input-label::after {
  content: '';
  position: absolute;
  bottom: -5rpx;
  left: 0;
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #C8860D 0%, #DAA520 100%);
  border-radius: 2rpx;
}

/* 浮动动画 */
@keyframes float {
  0%, 100% {
    transform: translateY(0rpx);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

/* 云朵浮动动画 */
@keyframes cloudFloat {
  0% {
    transform: translateX(-20rpx);
  }
  100% {
    transform: translateX(100vw);
  }
}

/* 主内容区域滑入动画 */
.main-content {
  animation: slideInUp 0.6s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .main-content {
    margin: -30rpx 15rpx 0;
    padding: 30rpx 20rpx;
  }
  
  .page-title {
    font-size: 42rpx;
  }
  
  .card {
    padding: 20rpx;
  }
}

/* 日期类型提示样式 */
.date-type-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  padding-left: 10rpx;
  font-style: italic;
}

/* 农历日期选择器样式 */
.lunar-picker-container {
  margin-top: 10rpx;
}

.lunar-pickers {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-bottom: 10rpx;
}

.lunar-year-picker,
.lunar-month-picker,
.lunar-day-picker {
  flex: 1;
  min-width: 0;
}

.lunar-year-picker .picker,
.lunar-month-picker .picker,
.lunar-day-picker .picker {
  background: #F8F9FA;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  padding: 20rpx 15rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333;
  min-height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.lunar-year-picker .picker:active,
.lunar-month-picker .picker:active,
.lunar-day-picker .picker:active {
  background: #E9ECEF;
  border-color: #C8860D;
  transform: scale(0.98);
}

/* 对应日期显示样式 */
.corresponding-date {
  margin-top: 8rpx;
  padding: 8rpx 12rpx;
  background: linear-gradient(90deg, #FFF8DC 0%, #F5DEB3 100%);
  border-left: 4rpx solid #C8860D;
  border-radius: 8rpx;
  font-size: 22rpx;
  color: #2F4F4F;
  font-weight: 500;
}

/* 日期选择器容器样式 */
.date-picker-container {
  margin-top: 10rpx;
}

.date-picker-container .picker {
  background: #F8F9FA;
  border: 2rpx solid #E0E0E0;
  border-radius: 12rpx;
  padding: 25rpx 20rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  transition: all 0.3s ease;
}

.date-picker-container .picker:active {
  background: #E9ECEF;
  border-color: #C8860D;
  transform: scale(0.98);
}

/* 输入组样式增强 */
.input-group {
  margin-bottom: 30rpx;
}

.input-group:last-child {
  margin-bottom: 0;
}

/* 选择器标签样式 */
.picker[placeholder] {
  color: #999;
}

/* 响应式适配农历选择器 */
@media (max-width: 375px) {
  .lunar-pickers {
    gap: 10rpx;
  }
  
  .lunar-year-picker .picker,
  .lunar-month-picker .picker,
  .lunar-day-picker .picker {
    padding: 15rpx 10rpx;
    font-size: 24rpx;
  }
  
  .corresponding-date {
    font-size: 20rpx;
    padding: 6rpx 10rpx;
  }
}
