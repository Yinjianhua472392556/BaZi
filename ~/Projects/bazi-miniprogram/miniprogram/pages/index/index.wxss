/**index.wxss**/

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F5E8 0%, #F0F8FF 50%, #FFF8DC 100%);
  position: relative;
}

/* 顶部插画区域 */
.header-illustration {
  height: 450rpx;
  background: linear-gradient(180deg, #87CEEB 0%, #E0F6FF 40%, #F0F8FF 100%);
  position: relative;
  overflow: hidden;
  border-radius: 0 0 50rpx 50rpx;
}

.illustration-content {
  position: relative;
  width: 100%;
  height: 100%;
}

/* 云朵装饰 */
.cloud {
  position: absolute;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50rpx;
  opacity: 0.7;
}

.cloud::before,
.cloud::after {
  content: '';
  position: absolute;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50rpx;
}

.cloud-1 {
  width: 80rpx;
  height: 40rpx;
  top: 60rpx;
  left: 100rpx;
  animation: cloudFloat 20s infinite linear;
}

.cloud-1::before {
  width: 60rpx;
  height: 60rpx;
  top: -30rpx;
  left: 10rpx;
}

.cloud-1::after {
  width: 80rpx;
  height: 40rpx;
  top: -20rpx;
  right: 15rpx;
}

.cloud-2 {
  width: 100rpx;
  height: 50rpx;
  top: 100rpx;
  right: 80rpx;
  animation: cloudFloat 25s infinite linear reverse;
}

.cloud-2::before {
  width: 70rpx;
  height: 70rpx;
  top: -35rpx;
  left: 15rpx;
}

.cloud-2::after {
  width: 90rpx;
  height: 50rpx;
  top: -25rpx;
  right: 20rpx;
}

/* 山峦装饰 */
.mountain {
  position: absolute;
  bottom: 100rpx;
  background: linear-gradient(45deg, #8FBC8F 0%, #9ACD32 100%);
  opacity: 0.6;
}

.mountain-1 {
  width: 200rpx;
  height: 120rpx;
  left: 50rpx;
  border-radius: 100rpx 100rpx 0 0;
  transform: skew(-10deg);
}

.mountain-2 {
  width: 150rpx;
  height: 80rpx;
  right: 100rpx;
  border-radius: 80rpx 80rpx 0 0;
  transform: skew(15deg);
}

/* 亭台楼阁 */
.pavilion {
  position: absolute;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 200rpx;
  height: 150rpx;
}

.pavilion-roof {
  width: 180rpx;
  height: 40rpx;
  background: linear-gradient(45deg, #8B4513 0%, #A0522D 100%);
  border-radius: 20rpx 20rpx 0 0;
  position: relative;
  margin: 0 auto;
  border: 3rpx solid #654321;
}

.pavilion-roof::before {
  content: '';
  position: absolute;
  top: -15rpx;
  left: -10rpx;
  width: 200rpx;
  height: 20rpx;
  background: linear-gradient(45deg, #6B4226 0%, #8B4513 100%);
  border-radius: 15rpx;
}

.pavilion-body {
  width: 120rpx;
  height: 80rpx;
  background: linear-gradient(180deg, #DEB887 0%, #CD853F 100%);
  margin: 0 auto;
  border-radius: 10rpx;
  border: 2rpx solid #8B7355;
}

.pavilion-pillars {
  position: absolute;
  bottom: 0;
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}

.pillar {
  width: 8rpx;
  height: 80rpx;
  background: linear-gradient(180deg, #8B4513 0%, #654321 100%);
  border-radius: 4rpx;
}

/* 静坐人物 */
.character {
  position: absolute;
  bottom: 120rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 80rpx;
}

.character-head {
  width: 30rpx;
  height: 30rpx;
  background: #FDBCB4;
  border-radius: 50%;
  margin: 0 auto;
  border: 2rpx solid #F4A460;
}

.character-body {
  width: 60rpx;
  height: 50rpx;
  background: linear-gradient(180deg, #E6E6FA 0%, #D8BFD8 100%);
  border-radius: 30rpx 30rpx 0 0;
  margin-top: 5rpx;
  border: 2rpx solid #DDA0DD;
}

/* 主要内容区域 */
.main-content {
  padding: 40rpx 30rpx;
  background: white;
  margin: -30rpx 20rpx 0;
  border-radius: 30rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
}

/* 页面标题 */
.page-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #2F4F4F;
  text-align: center;
  margin-bottom: 40rpx;
  position: relative;
}

.page-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #40E0D0 0%, #48D1CC 100%);
  border-radius: 2rpx;
}

/* 卡片样式更新 */
.card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #F0F0F0;
}

/* 按钮样式更新 */
.btn-primary {
  background: linear-gradient(45deg, #40E0D0 0%, #00CED1 100%) !important;
  color: white !important;
  font-size: 36rpx;
  font-weight: bold;
  padding: 25rpx;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 25rpx rgba(64, 224, 208, 0.4);
  margin: 20rpx 0;
  position: relative;
  overflow: hidden;
}

.btn-primary::after {
  border: none;
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(64, 224, 208, 0.6);
}

.btn-secondary {
  background: white !important;
  color: #40E0D0 !important;
  font-size: 34rpx;
  font-weight: 600;
  padding: 25rpx;
  border: 3rpx solid #40E0D0;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 15rpx rgba(64, 224, 208, 0.2);
  margin: 20rpx 0;
}

.btn-secondary::after {
  border: none;
}

.btn-secondary:active {
  background: #F0FFFF !important;
  transform: scale(0.98);
}

/* 单选按钮组 */
.radio-item {
  display: inline-block;
  margin-right: 40rpx;
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #2F4F4F;
  font-weight: 500;
}

.radio-item radio {
  margin-right: 10rpx;
}

/* 快速功能区域 */
.quick-actions {
  display: flex;
  justify-content: center;
  margin-top: 20rpx;
}

.quick-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 40rpx;
  background: linear-gradient(45deg, #F8F9FA 0%, #E9ECEF 100%);
  border-radius: 20rpx;
  min-width: 240rpx;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  border: 1rpx solid #E0E0E0;
}

.quick-item:active {
  background: #F0F0F0;
  transform: scale(0.95);
}

.quick-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.quick-item text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 按钮禁用状态 */
.btn-primary[disabled] {
  background: #DDD !important;
  color: #999 !important;
  box-shadow: none !important;
}

.btn-primary[disabled]:active {
  transform: none !important;
}

/* 日期时间选择器优化 */
.picker[data-selected="true"] {
  color: #333;
  border-color: #C8860D;
  background: #FFF8DC;
}

/* 响应式布局优化 */
@media (max-width: 375px) {
  .container {
    padding: 30rpx 15rpx;
  }
  
  .title {
    font-size: 42rpx;
  }
  
  .quick-actions {
    flex-direction: column;
    gap: 20rpx;
  }
  
  .quick-item {
    min-width: auto;
    width: 100%;
  }
}

/* 加载状态优化 */
.calculating {
  opacity: 0.7;
  pointer-events: none;
}

/* 输入框焦点状态 */
.input-field:focus {
  border-color: #C8860D;
  box-shadow: 0 0 0 4rpx rgba(200, 134, 13, 0.1);
}

/* 动画效果 */
.card {
  animation: fadeInUp 0.6s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 标签样式优化 */
.input-label {
  position: relative;
  color: #2F4F4F;
  font-weight: 600;
  font-size: 32rpx;
}

.input-label::after {
  content: '';
  position: absolute;
  bottom: -5rpx;
  left: 0;
  width: 40rpx;
  height: 4rpx;
  background: linear-gradient(90deg, #40E0D0 0%, #48D1CC 100%);
  border-radius: 2rpx;
}

/* 云朵浮动动画 */
@keyframes cloudFloat {
  0% {
    transform: translateX(-20rpx);
  }
  100% {
    transform: translateX(100vw);
  }
}

/* 主内容区域滑入动画 */
.main-content {
  animation: slideInUp 0.6s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .main-content {
    margin: -30rpx 15rpx 0;
    padding: 30rpx 20rpx;
  }
  
  .page-title {
    font-size: 42rpx;
  }
  
  .card {
    padding: 20rpx;
  }
}

/* 日期类型提示样式 */
.date-type-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
  padding-left: 10rpx;
  font-style: italic;
}
