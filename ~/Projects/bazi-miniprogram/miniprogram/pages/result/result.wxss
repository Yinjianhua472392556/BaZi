/**result.wxss**/

.container {
  padding: 40rpx 20rpx;
  min-height: 100vh;
}

/* 用户信息样式 */
.user-info {
  text-align: center;
  padding: 20rpx 0;
}

.user-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #8B4513;
  margin-bottom: 20rpx;
}

.birth-info {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.birth-info text {
  font-size: 28rpx;
  color: #666;
}

/* 八字排盘样式 */
.bazi-grid {
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
  gap: 10rpx;
}

.bazi-column {
  flex: 1;
  text-align: center;
}

.bazi-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.bazi-item {
  background: linear-gradient(135deg, #C8860D 0%, #DAA520 100%);
  color: white;
  padding: 25rpx 15rpx;
  border-radius: 15rpx;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  box-shadow: 0 6rpx 20rpx rgba(200, 134, 13, 0.3);
  min-height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 五行分析样式 */
.wuxing-container {
  margin-top: 30rpx;
}

.wuxing-item {
  margin-bottom: 30rpx;
}

.wuxing-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.wuxing-name {
  font-size: 30rpx;
  color: #8B4513;
  font-weight: 500;
}

.wuxing-count {
  font-size: 32rpx;
  color: #C8860D;
  font-weight: bold;
}

.wuxing-bar {
  background: #F0F0F0;
  height: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.wuxing-progress {
  height: 100%;
  background: linear-gradient(90deg, #C8860D 0%, #DAA520 100%);
  border-radius: 10rpx;
  transition: width 0.8s ease;
}

/* 性格分析样式 */
.analysis-content {
  background: linear-gradient(135deg, #FFF8DC 0%, #F5DEB3 100%);
  padding: 30rpx;
  border-radius: 15rpx;
  font-size: 30rpx;
  line-height: 1.8;
  color: #5D4037;
  margin-top: 20rpx;
  border-left: 8rpx solid #C8860D;
}

/* 操作按钮样式 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin: 40rpx 0;
}

.action-buttons .btn-primary,
.action-buttons .btn-secondary {
  width: 100%;
  margin: 0;
}

/* 返回按钮样式 */
.back-button {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  background: rgba(200, 134, 13, 0.9);
  color: white;
  padding: 20rpx 40rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  font-weight: bold;
  box-shadow: 0 8rpx 30rpx rgba(200, 134, 13, 0.4);
  backdrop-filter: blur(10rpx);
}

.back-button:active {
  background: rgba(200, 134, 13, 1);
  transform: translateX(-50%) scale(0.95);
}

/* 响应式优化 */
@media (max-width: 375px) {
  .bazi-grid {
    gap: 5rpx;
  }
  
  .bazi-item {
    padding: 20rpx 10rpx;
    font-size: 28rpx;
  }
  
  .action-buttons {
    margin-bottom: 120rpx; /* 为返回按钮留出空间 */
  }
}

/* 动画效果 */
.card {
  animation: slideInUp 0.6s ease-out;
}

.card:nth-child(2) { animation-delay: 0.1s; }
.card:nth-child(3) { animation-delay: 0.2s; }
.card:nth-child(4) { animation-delay: 0.3s; }

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* 五行进度条动画 */
.wuxing-progress {
  animation: progressFill 1.2s ease-out;
}

@keyframes progressFill {
  from {
    width: 0%;
  }
}

/* 特殊效果 */
.bazi-item:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 25rpx rgba(200, 134, 13, 0.4);
}

/* 五行颜色主题 */
.wuxing-item:nth-child(1) .wuxing-progress {
  background: linear-gradient(90deg, #22C55E 0%, #16A34A 100%); /* 木 - 绿色 */
}

.wuxing-item:nth-child(2) .wuxing-progress {
  background: linear-gradient(90deg, #EF4444 0%, #DC2626 100%); /* 火 - 红色 */
}

.wuxing-item:nth-child(3) .wuxing-progress {
  background: linear-gradient(90deg, #A3A3A3 0%, #737373 100%); /* 土 - 灰色 */
}

.wuxing-item:nth-child(4) .wuxing-progress {
  background: linear-gradient(90deg, #F59E0B 0%, #D97706 100%); /* 金 - 金色 */
}

.wuxing-item:nth-child(5) .wuxing-progress {
  background: linear-gradient(90deg, #3B82F6 0%, #2563EB 100%); /* 水 - 蓝色 */
}

/* 滚动优化 */
.container {
  padding-bottom: 120rpx; /* 为固定按钮留出空间 */
}
