/**profile.wxss**/

/* 页面容器 */
.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #E8F5E8 0%, #F0F8FF 50%, #FFF8DC 100%);
  position: relative;
}

/* 顶部插画区域 */
.header-illustration {
  height: 400rpx;
  background: linear-gradient(180deg, #87CEEB 0%, #E0F6FF 40%, #F0F8FF 100%);
  position: relative;
  overflow: hidden;
  border-radius: 0 0 50rpx 50rpx;
}

.illustration-content {
  position: relative;
  width: 100%;
  height: 100%;
}

/* 云朵装饰 */
.cloud {
  position: absolute;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50rpx;
  opacity: 0.7;
}

.cloud::before,
.cloud::after {
  content: '';
  position: absolute;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 50rpx;
}

.cloud-1 {
  width: 60rpx;
  height: 30rpx;
  top: 40rpx;
  left: 80rpx;
  animation: cloudFloat 20s infinite linear;
}

.cloud-1::before {
  width: 45rpx;
  height: 45rpx;
  top: -22rpx;
  left: 8rpx;
}

.cloud-1::after {
  width: 60rpx;
  height: 30rpx;
  top: -15rpx;
  right: 12rpx;
}

.cloud-2 {
  width: 80rpx;
  height: 40rpx;
  top: 80rpx;
  right: 60rpx;
  animation: cloudFloat 25s infinite linear reverse;
}

.cloud-2::before {
  width: 55rpx;
  height: 55rpx;
  top: -27rpx;
  left: 12rpx;
}

.cloud-2::after {
  width: 70rpx;
  height: 40rpx;
  top: -20rpx;
  right: 15rpx;
}

/* 山峦装饰 */
.mountain {
  position: absolute;
  bottom: 100rpx;
  background: linear-gradient(45deg, #8FBC8F 0%, #9ACD32 100%);
  opacity: 0.6;
}

.mountain-1 {
  width: 120rpx;
  height: 70rpx;
  left: 50rpx;
  border-radius: 60rpx 60rpx 0 0;
  transform: skew(-8deg);
}

.mountain-2 {
  width: 100rpx;
  height: 50rpx;
  right: 100rpx;
  border-radius: 50rpx 50rpx 0 0;
  transform: skew(12deg);
}

/* 个人中心装饰 */
.profile-decoration {
  position: absolute;
  bottom: 60rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
}

.profile-circle {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #40E0D0 0%, #20B2AA 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(64, 224, 208, 0.4);
  border: 4rpx solid rgba(255, 255, 255, 0.8);
}

.profile-icon {
  font-size: 60rpx;
  color: white;
}

.profile-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2F4F4F;
  text-shadow: 0 2rpx 4rpx rgba(255, 255, 255, 0.8);
}

/* 主要内容区域 */
.main-content {
  padding: 40rpx 30rpx;
  background: white;
  margin: -30rpx 20rpx 0;
  border-radius: 30rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.1);
  position: relative;
  z-index: 10;
}

/* 卡片样式 */
.card {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
  border: 1rpx solid #F0F0F0;
}

/* 副标题样式 */
.subtitle {
  font-size: 32rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 30rpx;
  position: relative;
}

.subtitle::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 0;
  width: 40rpx;
  height: 3rpx;
  background: linear-gradient(90deg, #40E0D0 0%, #48D1CC 100%);
  border-radius: 2rpx;
}

/* 菜单列表样式 */
.menu-list {
  margin-top: 20rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx 25rpx;
  background: #FAFAFA;
  border-radius: 18rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.menu-item::before {
  content: '';
  position: absolute;
  left: 0;
  top: 0;
  width: 4rpx;
  height: 100%;
  background: linear-gradient(180deg, #40E0D0 0%, #48D1CC 100%);
  border-radius: 0 2rpx 2rpx 0;
}

.menu-item:active {
  background: #F0F0F0;
  transform: scale(0.98);
}

.menu-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #40E0D0 0%, #20B2AA 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 25rpx;
  box-shadow: 0 4rpx 12rpx rgba(64, 224, 208, 0.3);
}

.menu-icon {
  font-size: 36rpx;
  color: white;
}

.menu-content {
  flex: 1;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

.menu-arrow {
  font-size: 28rpx;
  color: #C8860D;
  font-weight: bold;
}

/* 版本信息卡片 */
.version-card {
  background: linear-gradient(135deg, #FFF8DC 0%, #F0F8FF 100%);
  border: 1rpx solid #E0E0E0;
}

.version-info {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.app-logo {
  font-size: 80rpx;
  margin-right: 30rpx;
  opacity: 0.8;
}

.app-details {
  text-align: left;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #2F4F4F;
  margin-bottom: 8rpx;
}

.app-version {
  font-size: 24rpx;
  color: #999;
  background: #E0E0E0;
  padding: 6rpx 12rpx;
  border-radius: 10rpx;
  display: inline-block;
}

/* 免责声明样式 */
.disclaimer {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  padding: 30rpx;
  line-height: 1.6;
  background: #F9F9F9;
  border-radius: 15rpx;
  margin: 40rpx 0 20rpx;
  border: 1rpx solid #F0F0F0;
}

/* 动画效果 */
.card {
  animation: fadeInUp 0.6s ease-out;
}

.menu-item:nth-child(1) { animation: slideInRight 0.6s ease-out 0.1s both; }
.menu-item:nth-child(2) { animation: slideInRight 0.6s ease-out 0.2s both; }
.menu-item:nth-child(3) { animation: slideInRight 0.6s ease-out 0.3s both; }

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideInRight {
  from {
    opacity: 0;
    transform: translateX(50rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes cloudFloat {
  0% {
    transform: translateX(-20rpx);
  }
  100% {
    transform: translateX(100vw);
  }
}

/* 响应式适配 */
@media (max-width: 375px) {
  .main-content {
    margin: -30rpx 15rpx 0;
    padding: 30rpx 20rpx;
  }
  
  .menu-item {
    padding: 25rpx 20rpx;
  }
  
  .menu-icon-wrapper {
    width: 70rpx;
    height: 70rpx;
    margin-right: 20rpx;
  }
  
  .menu-icon {
    font-size: 32rpx;
  }
  
  .menu-text {
    font-size: 28rpx;
  }
  
  .menu-desc {
    font-size: 22rpx;
  }
}

/* 主要内容区域过渡动画 */
.main-content {
  animation: slideInUp 0.6s ease-out;
}

@keyframes slideInUp {
  from {
    opacity: 0;
    transform: translateY(50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}
